<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="cashback_print_view" model="ir.ui.view">
        <field name="name">Cashback Report</field>
        <field name="model">cashback.print</field>
        <field name="arch" type="xml">
            <form string="Print Options">
                <group col="4">
                    <field name="date_from" required="1"/>
                    <field name="date_to" required="1"/>
                </group>
                <footer>
                    <button name="print_report" string="Print" type="object" default_focus="1" class="oe_highlight"/>
                    or 
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_cashback_print" model="ir.actions.act_window">
        <field name="name">Print Cashback</field>
        <field name="res_model">cashback.print</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="cashback_print_view"/>
        <field name="target">new</field>
    </record>

    <act_window
            id="action_cashback_print_wizard"
            name="Print Cashback Wizard"
            res_model="cashback.print"
            src_model="master.customer.cashback"
            view_mode="form"
            target="new"
            view_type="form"/>

    <report 
        id="action_cashback_report"
        model="master.customer.cashback"
        string="Cashback Report"
        report_type="qweb-pdf"
        name="adireksa_cashback_pattern.report_cashback_new"
        file="adireksa_cashback_pattern.report_cashback_new"
        />
</odoo>
