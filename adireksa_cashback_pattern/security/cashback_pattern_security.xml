<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data noupdate="1">

        <record model="ir.module.category" id="module_cashback_pattern_category">
            <field name="name">Cashback Pattern Access</field>
            <field name="description">Cashback pattern access level for this module</field>
            <field name="sequence">4</field>
        </record>

        <record id="group_cashback_pattern_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="adireksa_cashback_pattern.module_cashback_pattern_category" />
        </record>

        <record id="group_cashback_pattern_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="adireksa_cashback_pattern.module_cashback_pattern_category" />
        </record>

        <record id="group_customer_target_user" model="res.groups">
            <field name="name">Create Customer Target</field>
            <field name="category_id" ref="adireksa_cashback_pattern.module_cashback_pattern_category" />
        </record>

        <record id="group_customer_target_manager" model="res.groups">
            <field name="name">Customer Target Approve</field>
            <field name="category_id" ref="adireksa_cashback_pattern.module_cashback_pattern_category" />
        </record>

        <!-- Record Rule -->
        <record id="cashback_pattern_rule" model="ir.rule">
            <field name="name">Cashback Pattern Rule</field>
            <field name="model_id" ref="model_cashback_rule" />
            <field name="global" eval="True" />
            <field name="domain_force">['|',('company_id','child_of',[user.company_id.id]),('company_id','=',False)]</field>
        </record>

    </data>
</odoo>
