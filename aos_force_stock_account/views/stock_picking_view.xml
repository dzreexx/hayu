<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data> 

        <record id="view_picking_force_account_form" model="ir.ui.view">
	        <field name="name">stock.picking.form</field>
	        <field name="model">stock.picking</field>
	        <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">      
	            <xpath expr="//page[@name='extra']/group/group/field[@name='move_type']" position="after">
	            	<field name="required_force_account" invisible="1"/>
	            	<field name="account_force_id" groups="aos_force_stock_account.group_stock_account_force" 
						attrs="{'required': [('required_force_account', '=', True)]}"/>
	            </xpath>
            </field>
        </record>

    </data>
</odoo> 
