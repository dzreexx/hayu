<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="coretax_product_form_view_common" model="ir.ui.view">
        <field name="name">coretax.product.form.view.common</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='barcode']" position="after">
                <field name="coretax_product_id" options="{'no_create': True}"/>
            </xpath>
        </field>
    </record>

    <record id="coretax_product_form_view_normal" model="ir.ui.view">
        <field name="name">coretax.product.form.view.normal</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='barcode']" position="after">
                <field name="coretax_product_id" options="{'no_create': True}"/>
            </xpath>
        </field>
    </record>

    <record id="coretax_product_uom_tree_view" model="ir.ui.view">
        <field name="name">uom.uom.tree</field>
        <field name="model">uom.uom</field>
        <field name="inherit_id" ref="uom.product_uom_tree_view"/>
        <field name="arch" type="xml">
            <field name="category_id" position="after">
                <field name="coretax_uom_id"/>
            </field>
        </field>
    </record>

    <record id="coretax_product_uom_form_view" model="ir.ui.view">
        <field name="name">uom.uom.form</field>
        <field name="model">uom.uom</field>
        <field name="inherit_id" ref="uom.product_uom_form_view"/>
        <field name="arch" type="xml">
            <field name="category_id" position="after">
                <field name="coretax_uom_id"/>
            </field>
        </field>
    </record>

</odoo>
