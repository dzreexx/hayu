<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_app_theme_config_settings_inherit" model="ir.ui.view">
            <field name="name">view.app.theme.config.settings.inherit</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="app_odoo_customize.view_app_theme_config_settings"/>
            <field name="arch" type="xml">
                <xpath expr="//form/div/div[3]" position="after">
                     <div class="col-12 col-lg-12 mb4">
                            <span class="col-3 col-lg-2 text-left">Sales Return</span>
                            <button string="Delete All Sales Return" type="object" name="remove_sales_return" confirm="Please confirm to delete the select data?" class="oe_highlight"/> 
                     </div>

                     <div class="col-12 col-lg-12 mb4">
                            <span class="col-3 col-lg-2 text-left">Sales Agreement</span>
                            <button string="Delete All Sales Agreement" type="object" name="remove_sale_agreement" confirm="Please confirm to delete the select data?" class="oe_highlight"/> 
                     </div>

                     <div class="col-12 col-lg-12 mb4">
                            <span class="col-3 col-lg-2 text-left">Credit Limit Request</span>
                            <button string="Delete All Credit Limit Request" type="object" name="remove_credit_limit_request" confirm="Please confirm to delete the select data?" class="oe_highlight"/> 
                     </div>

                     <div class="col-12 col-lg-12 mb4">
                            <span class="col-3 col-lg-2 text-left">Cashback</span>
                            <button string="Delete All Cashback Transaction" type="object" name="remove_cashback_transaction" confirm="Please confirm to delete the select data?" class="oe_highlight"/> 
                     </div>
                </xpath>
            </field>
        </record>
 
    </data>
</odoo>