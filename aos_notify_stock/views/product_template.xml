<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record model="ir.ui.view" id="product_template_form_view_inherited">
        <field name="name">product.template.form.inherited</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='general_information']/group[1]/group[@name='group_general']" position="inside">
                <label for="sale_per_month"/>
                <div>
                    <field name="sale_per_month" class="oe_inline" style="vertical-align:baseline"/> Month
                </div>
                <field name="sales_qty_count" />
                <field name="qty_on_hand_query"/>
            </xpath>
        </field>
    </record>
</odoo>
