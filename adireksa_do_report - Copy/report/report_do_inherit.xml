<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="report_picking_inherit">
        <record id="report_delivery_document_inherit" model="ir.ui.view">
            <field name="name">report.delivery.document.inherit</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.report_delivery_document"/>
        <field name="arch" type="xml">
            <xpath expr="//table[2]" position="replace">
                <table class="table table-condensed mt48" t-if="not o.pack_operation_ids">
                    <thead>
                        <tr>
                            <th><strong>Product</strong></th>
                            <th><strong>Attributes</strong></th>
                            <th><strong>Qty / DUS</strong></th>
                            <th><strong>Ordered Quantity</strong></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="o.move_lines" t-as="move">
                            <td><span t-field="move.product_id.name"/></td>
                            <td>
                                <span t-esc="', '.join(move.product_id.attribute_value_ids.mapped('name'))"/>
                            </td>
                            <td><span t-field="move.product_id.qty_per_dus"/></td>
                            <td>
                                <span t-field="move.ordered_qty"/>
                                <span t-field="move.product_uom"/>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </xpath>
            <xpath expr="//table[3]" position="replace">
                <table class="table table-condensed mt48" t-if="o.pack_operation_ids">
                    <t t-set="has_serial_number" t-value="o.pack_operation_ids.filtered('pack_lot_ids')" groups="stock.group_production_lot"/>
                    <thead>
                        <tr>
                            <th><strong>Product</strong></th>
                            <th name="lot_serial" t-if="has_serial_number">
                                <span class="pull-left">Lot/Serial Number</span>
                            </th>
                            <th><strong>Attributes</strong></th>
                            <th><strong>Qty / DUS</strong></th>
                            <th class="text-center"><strong>Ordered Quantity</strong></th>
                            <th t-if="any([pack_operation.state == 'done' for pack_operation in o.pack_operation_ids])" class="text-right">
                                    <strong>Delivered Quantity</strong>
                            </th>
                        </tr> <td><span t-field="move.product_id.qty_per_dus"/></td>
                    </thead>
                    <tbody>
                        <tr t-foreach="o.pack_operation_ids" t-as="pack_operation">
                            <td><span t-field="pack_operation.product_id.name"/></td>
                            <td>
                                <span t-esc="', '.join(pack_operation.product_id.attribute_value_ids.mapped('name'))"/>
                            </td>
                            <td><span t-field="pack_operation.product_id.qty_per_dus"/></td>
                            <t t-if="has_serial_number">
                                <td t-if="pack_operation.pack_lot_ids">
                                    <table class="table table-condensed" t-if="pack_operation.pack_lot_ids">
                                        <tr t-foreach="pack_operation.pack_lot_ids" t-as="packlot">
                                            <td>
                                                <span t-field="packlot.lot_id"/>
                                                <t t-if="not packlot.lot_id">
                                                    <span t-field="packlot.lot_name"/>
                                                </t>
                                            </td>
                                            <td name="lot_qty">
                                                <span t-field="packlot.qty"/>
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                                <td t-if="not pack_operation.pack_lot_ids"/>
                            </t>
                            <td class="text-center">
                                <span t-if="pack_operation.package_id">:</span>
                                <span t-field="pack_operation.package_id"/>
                                <span t-field="pack_operation.ordered_qty"/>
                                <t t-if="pack_operation.linked_move_operation_ids">
                                    <span t-field="pack_operation.linked_move_operation_ids[0].move_id.product_uom"></span>
                                </t>
                                <t t-else="1">
                                    <span t-field="pack_operation.product_uom_id"></span>
                                </t>
                            </td>
                            <td class="text-right" t-if="pack_operation.state == 'done'">
                                <t t-if="pack_operation.ordered_qty != pack_operation.qty_done_uom_ordered">
                                    <t t-set="backorder" t-value="True"/>
                                </t>
                                <span t-field="pack_operation.qty_done_uom_ordered"/>
                                <t t-if="pack_operation.linked_move_operation_ids">
                                    <span t-field="pack_operation.linked_move_operation_ids[0].move_id.product_uom"></span>
                                </t>
                                <t t-else="1">
                                    <span t-field="pack_operation.product_uom_id"></span>
                                </t>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </xpath>
        </field>
        </record>
    </template>


        <template id="report_surat_jalan_inherit" inherit_id="adireksa_do_slip.report_surat_jalan">
            <xpath expr="//div[@class='page']" position="replace">
                <div class="page">
                    <div class="oe_structure"/>
                    <h2 style="text-align:center;">Surat Jalan</h2>
                    <!-- <div style="height: 40px;"/> -->
                    <div class="row">
                            <table style="border: None solid black; float:left; font-size: 15px;">
                                <tr>
                                    <td>
                                        <strong>Toko</strong>
                                    </td>
                                    <td width="40px">:</td>
                                    <td>
                                        <span t-esc="o.partner_id.name"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <strong>Kota</strong>
                                    </td>
                                    <td width="40px">:</td>
                                    <td width="100px">
                                        <span t-esc="o.partner_id.state_id.name"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <strong>Reference</strong> 
                                    </td>
                                    <td width="40px">:</td>
                                    <td width="100px">
                                        <strong><span t-esc="o.note"/></strong>
                                    </td>
                                </tr>
                            </table>
                    </div>

                    <!--Kota field-->
                    <div class="row">
                            <table style="border:None solid black; float:right; font-size: 15px;">
                                <tr>
                                    <td>
                                        <strong>Jakarta,</strong>
                                    </td>
                                    <td width="40px"></td>
                                    <td>
                                          <span t-field="o.scheduled_date"/>
                                    </td>
                                </tr>

                                <tr>
                                    <td>
                                        <strong>No. Surat Jalan</strong>
                                    </td>
                                    <td width="40px">:</td>
                                    <td>
                                        <strong><span t-esc="o.name"/></strong>
                                    </td>
                                </tr>
                            </table>
                    </div>
                    <!--Tree view-->
                    <!-- <div style="height: 15px;"/> -->
                    <t t-set="no_index" t-value="0"/>
                    <table class="table table-sm table-bordered" rules="all" width="100%" height="5%" style="font-size:13px; border:1px solid;">
                        <thead style="font-size:15px;">
                            <tr>
                                <th width="3%" class="p-4" scope="col" style="border:1px solid #000;">
                                    <strong>No.</strong>
                                </th>
                                <th width="10%" class="p-4" scope="col" style="border:1px solid #000;">
                                    <strong>Qty</strong>
                                </th>
                                <th width="22%" class="p-4" scope="col" style="border:1px solid #000;">
                                    <strong>Nama Barang</strong>
                                </th>
                                <th width="10%" class="p-4" scope="col" style="border:1px solid #000;">
                                    <strong>Part No</strong>
                                </th>
                                 <th width="10%" class="p-4" scope="col" style="border:1px solid #000;">
                                    <strong>Type</strong>
                                </th>
                                <th width="10%" class="p-4" scope="col" style="border:1px solid #000;">
                                    <strong>Brand</strong>
                                </th>
                                <!-- <th width="15%" class="p-4" scope="col" style="border:1px solid #000;">
                                    <strong >Packing</strong>
                                     <table width="100%" style="border-top: 1px solid black;">
                                        <tr>
                                            <td width="50%" style=" border-right:1px solid black; text-align: center;">
                                                <span>M Qty</span>
                                            </td>
                                            <td width="50%"  style="text-align: center;">
                                                <span>P Dus</span>
                                            </td>
                                        </tr>
                                    </table>
                                </th> -->
                                <th width="20px" class="p-4" scope="col" style="border:1px solid #000;">
                                    <strong >M Qty</strong>
                                </th>
                                <th width="50px" class="p-4" scope="col" style="border:1px solid #000;">
                                    <strong >P Dus</strong>
                                </th>
                                 <th width="50px" class="text-center" style="border: 1px solid black; vertical-align:middle;">
                                    <strong>Doos</strong>
                                </th>
                                 <th width="50px" class="text-center" style="border: 1px solid black; vertical-align:middle;">
                                    <strong>Kg</strong>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="o.move_line_ids_without_package" t-as="l">
                                <td class="text-center" style="border: 1px solid black; vertical-align:middle;"> 
                                    <span t-esc="no_index+1">.</span>
                                    <t t-set="no_index" t-value="no_index+1"/>
                                </td>
                                <td class="text-center" style="border: 1px solid black; vertical-align:middle;">
                                    <span t-esc="'%.0f'% l.qty_done"/>
                                     <span>,</span>
                                     <span style="padding-left:3px;" t-field="l.product_uom_id.name"/>
                                </td>
                                <td class="text-left" style="border: 1px solid black; vertical-align:middle;">
                                    <span t-field="l.product_id.name"/>
                                </td>
                                <td class="text-left" style="border: 1px solid black; vertical-align:middle;">
                                    <span t-field="l.part_number"/>
                                </td>
                                <td class="text-left" style="border: 1px solid black; vertical-align:middle;">
                                    <span t-field="l.product_id.type_motor"/>
                                </td>
                                 <td style="border: 1px solid black; vertical-align:middle; text-align:center;">
                                     <span t-field="l.product_id.product_brand"/> 
                                </td>
                                <td  style="border: 1px solid black; height:10px; vertical-align:middle;">
                                </td>
                                <td  style="border: 1px solid black; height:10px; vertical-align:middle; text-align: right;">
                                    <span t-esc="int(l.product_id.isi_perdus)"/> 
                                </td>
                                <td  style="border: 1px solid black; height:10px; vertical-align:middle;">
                                </td>
                                 <td class="text-center" style="border: 1px solid black; vertical-align:middle;">
                                     <span></span>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <div>
                        <div>
                            <table width="20%" style="border: None solid black; float:left;" valign="top">
                                <tr>
                                    <td>
                                        <strong>Tanda terima</strong>
                                    </td>
                                    <td>:</td>
                                </tr>
                            </table>
                            <table width="20%" style="border: None solid black; float:right; margin-left:200px;" valign="top">
                                <tr>
                                    <td>
                                        <strong>Hormat Kami</strong>
                                    </td>
                                    <td>:</td>
                                </tr>
                            </table>
                        </div>
                </div>
            </div>
        </xpath>    
    </template>

</data>
</odoo>
