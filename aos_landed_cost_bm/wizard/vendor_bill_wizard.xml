<odoo>
    <record id="vendor_bill_wizard_form_view" model="ir.ui.view">
        <field name="name">vendor.bill.wizard.form.view</field>
        <field name="model">vendor.bill.wizard</field>
        <field name="arch" type="xml">
            <form string="Vendor Bill Wizard">
                <group>
                    <field name="partner_id" />
                    <field name="cost_id" invisible="1"/>
                </group>
                <field name="cost_lines">
                    <tree editable="bottom" create="false" delete="false" edit="false">
                        <field name="product_id" />
                        <field name="account_id" />
                        <field name="qty" />
                        <field name="price_unit" string="Price"/>
                    </tree>
                </field>
                <footer>
                    <button name="btn_create_vendor" string="Create" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>