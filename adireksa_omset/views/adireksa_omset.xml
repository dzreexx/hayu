<odoo>
    <data>

        <record id="adireksa_omset_form_view" model="ir.ui.view">
            <field name="name">adireksa.omset.form</field>
            <field name="model">adireksa.omset</field>
            <field name="arch" type="xml">
                <form string="Omset Customer">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="jenis_omset"/>
                            <field name="tahun"/>
                        </group>
                        <group>
                            <field name="period_start"/>
                            <field name="period_end"/>
                            <field name="aktifkan_omset"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Omset Lines" name="omset_lines">
                            <field name="omset_lines">
                                <tree editable="bottom" nolabel="1">
                                    <field name="partner_id" domain="[('customer', '=', True)]"/>
                                    <field name="kelas_customer_id"/>
                                    <field name="target_omset"/>
                                </tree>
                                <form string="Omset Lines">
                                    <group>
                                        <group>
                                            <field name="partner_id"/>
                                        </group>
                                        <group>
                                            <field name="kelas_customer_id"/>
                                            <field name="target_omset"/>
                                        </group>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
                </form>
            </field>
        </record>

        <record id="adireksa_omset_tree" model="ir.ui.view">
            <field name="name">adireksa.omset.tree</field>
            <field name="model">adireksa.omset</field>
            <field name="arch" type="xml">
                <tree string="Omset Customer">
                    <field name="name"/>
                    <field name="jenis_omset"/>
                    <field name="tahun"/>
                    <field name="period_start"/>
                    <field name="period_end"/>
                    <field name="aktifkan_omset"/>
                </tree>
            </field>
        </record>

        <record id="action_adireksa_omset" model="ir.actions.act_window">
            <field name="name">Omset Customer</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">adireksa.omset</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a Omset Customer.
                </p>
            </field>
        </record>

        <menuitem id="menu_omset_customer_main" action="action_adireksa_omset" name="Customer Omset" parent="account.menu_finance_configuration" sequence="1"/>

    </data>
</odoo>