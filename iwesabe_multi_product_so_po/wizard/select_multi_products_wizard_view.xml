<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="view_select_multi_products_form" model="ir.ui.view">
		<field name="name">select.multi.product.form</field>
		<field name="model">select.multi.product</field>
		<field name="type">form</field>
		<field name="arch" type="xml">
			<form string="Select Multi Products">
				<group string="Products">
					<field name="product_ids" nolabel="1" >
						<tree decoration-danger="qty_available &lt; 0 or qty_available == 0" decoration-success="qty_available &gt; 0">
							<field name="default_code" />
							<field name="name" />
							<field name="product_template_variant_value_ids" widget="many2many_tags"/>
							<field name="lst_price" />
							<field name="standard_price" />
							<field name="qty_available" />
							<field name="virtual_available" />
						</tree>
					</field>
				</group>
				<footer>
					<button name="select_products" string="Add" type="object" class="oe_highlight" />
					<button string="Cancel" special="cancel" />
				</footer>
			</form>
		</field>
	</record>

	<record model="ir.actions.act_window" id="act_open_multi_select_products_view">
		<field name="name">Select Multi Products</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">select.multi.product</field>
		<field name="view_mode">form</field>
		<field name="target">new</field>
	</record>

	<record model="ir.actions.act_window.view" id="act_open_select_multi_products_view_form">
		<field name="act_window_id" ref="act_open_multi_select_products_view" />
		<field name="sequence" eval="10" />
		<field name="view_mode">form</field>
		<field name="view_id" ref="view_select_multi_products_form" />
	</record>
</odoo>
