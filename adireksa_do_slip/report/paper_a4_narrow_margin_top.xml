<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="paperformat_letter" model="report.paperformat">
        <field name="name">Letter</field>
        <field name="default" eval="True" />
        <field name="format">Letter</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">10</field>
        <field name="margin_bottom">23</field>
        <field name="margin_left">3</field>
        <field name="margin_right">15</field>
        <field name="header_line" eval="False" />
        <field name="header_spacing">35</field>
        <field name="dpi">90</field>
    </record>

<record id="action_report_delivery_order" model="ir.actions.report">
       <field name="name">Surat Jalan</field>
       <field name="model">stock.picking</field>
       <field name="report_type">qweb-pdf</field>
       <field name="report_name">adireksa_do_slip.report_surat_jalan</field>
       <field name="report_file">adireksa_do_slip.report_surat_jalan</field>
       <field name="binding_model_id" ref="stock.model_stock_picking"/>
