<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


        <!--Form view of Credit Limit Request-->
        <record id="view_credit_limit_request_form" model="ir.ui.view">
            <field name="name">Credit Limit Request</field>
            <field name="model">credit.limit.request</field>
            <field name="arch" type="xml">
                <form string="Credit Limit Request">
                <header>
                    <button name="request_approve" type="object" string="Request For Approval" states="draft" class="btn-primary"/>
                    <button name="credit_amount_approve" type="object" string="Approve" states="request_for_approval" class="btn-primary"/>
                    <button name="credit_request_reject" type="object" string="Reject" states="request_for_approval" class="btn-primary"/>
                    <field name="state" widget="statusbar" string="confirm"
                                    statusbar_visible="draft,request_for_approval,approved,rejected"/>
                </header>
                <sheet>
                    <h4><field name="name"/></h4>
                    <group>
                        <group>
                            <field name="request_id" required="1" />
                            <field name="create_date" readonly="1" force_save="1"/>
                            <field name="partner_id" required="1"/>
                        </group>  
                        <group>  
                            <field name="credit_amount" required="1"/>
                            <field name="last_credit_limit" />
                            <field name="description" />
                        </group>
                    </group>
                    <notebook>
                    </notebook>
                </sheet>
                </form>
            </field>
        </record>

        <!--Tree view of Credit Limit Request-->
        <record id="view_credit_limit_request_tree" model="ir.ui.view">
            <field name="name">credit.limit.request.tree</field>
            <field name="model">credit.limit.request</field>
            <field name="arch" type="xml">
                <tree string="Credit Limit Request">
                    <field name="request_id" />
                    <field name="partner_id" />
                    <field name="create_date" />
                    <field name="credit_amount" />
                    <field name="last_credit_limit" />
                    <field name="description" />
                    <field name="state" />
                </tree>
            </field>
        </record>

        <!--Action of Credit Limit Request-->
        <record id="action_credit_limit_request" model="ir.actions.act_window">
            <field name="name">Credit Limit Request</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">credit.limit.request</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="aos_credit_limit_request.view_credit_limit_request_tree"/>
        </record>

        <!--Menu of Credit limit Request-->
        <menuitem id="menu_credit_limit_request"
                  action="action_credit_limit_request"
                  parent ="sale.sale_order_menu"
                  name="Credit Limit"
                  sequence="10"/>

    </data>
</odoo>
