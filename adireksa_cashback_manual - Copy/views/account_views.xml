<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
        <record id="inherit_cashback_credit_debit_account_config_settings" model="ir.ui.view">
            <field name="name">Account Settings Config Cashback Credit and Debit Inherit</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="account.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='main_currency_setting_container']" position="after">
                    <h2>Cashback</h2>
                    <div class="row mt16 o_settings_container" name="main_casback_setting_container">
                        <div class="col-12 col-lg-6 o_setting_box" id="main_cashback">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Cashback Customer</span>
                                <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." aria-label="Values set here are company-specific." groups="base.group_multi_company" role="img"/>
                                <div class="text-muted">
                                    Cashback For Your Invoice
                                </div>
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label for="cashback_credit_id" class="col-lg-3 o_light_label"/>
                                        <field name="cashback_credit_id" options="{'no_create_edit': True, 'no_open': True}" context="{'active_test': False}"/>
                                    </div>
                                </div>
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label for="cashback_debit_id" class="col-lg-3 o_light_label"/>
                                        <field name="cashback_debit_id" options="{'no_create_edit': True, 'no_open': True}" context="{'active_test': False}"/>
                                    </div>
                                </div>
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label for="cashback_journal_id" class="col-lg-3 o_light_label"/>
                                        <field name="cashback_journal_id" options="{'no_create_edit': True, 'no_open': True}" context="{'active_test': False}"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

</odoo>