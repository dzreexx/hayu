<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_customer_cashback_form" model="ir.ui.view">
        <field name="name">Customer Cashback Form View</field>
        <field name="model">customer.cashback</field>
        <field name="arch" type="xml">
            <form string="Customer Cashback">
                <header>
                    <button name="action_request_approval" string="Request for Approval " states="draft" type="object"/>
                    <button name="action_approve" string="Approve" states="request_approval" type="object"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,request_approval,approve"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <field name="partner_id" required="1" attrs="{'readonly': [('state', 'not in', ['draft'])]}"/>
                        <field name="group_ids" attrs="{'readonly': [('state', 'not in', ['draft'])]}" widget="many2many_tags"/>
                        <field name="nilai_cashback" required="1" attrs="{'readonly': [('state', 'not in', ['draft'])]}"/>
                        <field name="customer_deposit_id" attrs="{'readonly': [('state', 'not in', ['draft'])]}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_customer_cashback_tree" model="ir.ui.view">
        <field name="name">Customer Cashback Tree View</field>
        <field name="model">customer.cashback</field>
        <field name="arch" type="xml">
            <tree string="Customer Cashback">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="group_ids"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="action_customer_cashback" model="ir.actions.act_window">
        <field name="name">Customer Cashback</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">customer.cashback</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to add Customer Cashback
            </p>
        </field>
    </record>

    <menuitem id="menu_customer_cash_back"  action="action_customer_cashback" parent="adireksa_cashback.menu_master_customer_cashback" sequence="2"/>

</odoo>