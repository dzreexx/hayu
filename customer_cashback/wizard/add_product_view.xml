<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="add_product_form" model="ir.ui.view">
			<field name="name">Add Product</field>
			<field name="model">add.product.lines</field>
			<field name="arch" type="xml">
				<form string="Add Product">
					<sheet string="Add Product">
						<field name="categ_ids" widget="many2many_tags" invisible="1"/>
						<field name="product_ids" widget="many2many_list" domain="[('categ_id', 'in', categ_ids and categ_ids[0] and categ_ids[0][2] or False)]"/>
					</sheet>
					<footer>
						<button name="add_product" type="object"
							string="Add" class="oe_highlight" />
						<button name="cancel" special="cancel"
							string="Cancel" />
					</footer>
				</form>
			</field>
		</record>

		<record id="add_product" model="ir.actions.act_window">
			<field name="name">Add Product</field>
			<field name="res_model">add.product.lines</field>
			<field name="view_mode">form</field>
			<field name="context">{'form_view_ref':
				'customer_cashback.add_product_form'}</field>
			<field name="target">new</field>
		</record>

	</data>
</odoo>
