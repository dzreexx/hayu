<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<!-- Allow To Verify Report -->
    <record id="module_customer_cashback" model="ir.module.category">
        <field name="name">Customer Cashback</field>
        <field name="sequence">99</field>
    </record>
    <record id="group_show_customer_cashback_menu" model="res.groups">
        <field name="name">Show Cashback Menu</field>
        <field name="category_id" ref="module_customer_cashback"/>
    </record>
    <record id="group_customer_cashback_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="implied_ids" eval="[(4, ref('customer_cashback.group_show_customer_cashback_menu'))]"/>
        <field name="category_id" ref="module_customer_cashback"/>
    </record>
    
    <record id="customer_cashback_rule" model="ir.rule">
        <field name="name">Customer Cahsback</field>
        <field name="model_id" ref="model_master_customer_cashback"/>
        <field name="global" eval="True"/>
        <field name="domain_force">['|',('company_id','=',False),('company_id','=',user.company_id.id)]</field>
    </record>
    
    <record id="product_cashback_rule" model="ir.rule">
        <field name="name">Product Cahsback</field>
        <field name="model_id" ref="model_master_cashback_product"/>
        <field name="global" eval="True"/>
        <field name="domain_force">['|',('company_id','=',False),('company_id','=',user.company_id.id)]</field>
    </record>
</odoo>