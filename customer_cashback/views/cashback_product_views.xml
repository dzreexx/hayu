<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="view_master_cashback_product_form"
		model="ir.ui.view">
		<field name="name">Master Cashback Product Form View</field>
		<field name="model">master.cashback.product</field>
		<field name="arch" type="xml">
			<form string="Master Cashback Product">
				<header>
					<button name="action_confirm" string="Confirm "
						states="draft" type="object" />
					<button name="action_cancel" string="Cancel" states="draft"
						type="object" />
					<field name="state" widget="statusbar"
						statusbar_visible="draft,confirm" />
				</header>
				<sheet>
					<div class="oe_title">
						<h1>
							<field name="name" readonly="1" />
						</h1>
					</div>
					<group>
						<group>
							<field name="cashback_type" required="1"
								attrs="{'readonly': [('state', 'not in', ('draft'))]}" />
							<field name="partner_id"
								attrs="{'readonly': [('state', 'not in', ('draft'))],'invisible': [('cashback_type', '=', 'group')],'required': [('cashback_type', '=', 'customer')]}" />
							<field name="group_id"
								attrs="{'readonly': [('state', 'not in', ('draft'))],'invisible': [('cashback_type', '=', 'customer')],'required': [('cashback_type', '=', 'group')]}" />
							<field name="product_categ_ids"
								attrs="{'readonly': [('state', 'not in', ('draft'))]}"
								widget="many2many_tags" required="1"/>
						</group>
						<group>
							<field name="start_date"/>
							<field name="end_date"/>
							<field attrs="{'readonly': [('state', 'not in', ('draft'))]}" name="company_id"/>
						</group>
					</group>
					<notebook>
						<page name="lines" string="Product Line">
							<group>
								<button name="%(customer_cashback.add_product)d"
									type="action" string="Add Product Line" class="oe_highlight" />
							</group>
							<field name="line_ids" nolabel="1">
								<tree create="0" delete="0" editable="bottom">
									<field name="product_id" readonly="1" required="1"/>
									<field name="hs_code" readonly="1"/>
									<field name="attribute_value_ids" widget="many2many_tags" readonly="1"/>
									<field name="value" />
								</tree>
							</field>
						</page>
					</notebook>
				</sheet>
			</form>
		</field>
	</record>

	<record id="view_master_cashback_product_tree"
		model="ir.ui.view">
		<field name="name">Master Cashback Product Tree View</field>
		<field name="model">master.cashback.product</field>
		<field name="arch" type="xml">
			<tree string="Master Cashback Product">
				<field name="name" />
				<field name="cashback_type" />
				<field name="state" />
			</tree>
		</field>
	</record>

	<record id="action_master_cashback_product"
		model="ir.actions.act_window">
		<field name="name">Master Cashback Product</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">master.cashback.product</field>
		<field name="view_mode">tree,form</field>
		<field name="help" type="html">
			<p class="oe_view_nocontent_create">
				Click to add Master Cashback Product
			</p>
		</field>
	</record>

	<menuitem id="menu_master_cashback_product"
		action="action_master_cashback_product"
		parent="menu_customer_cashback" sequence="2" />

</odoo>