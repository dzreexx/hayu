<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="view_master_customer_cashback_form" model="ir.ui.view">
		<field name="name">Master Customer Cashback Form View</field>
		<field name="model">master.customer.cashback</field>
		<field name="arch" type="xml">
			<form string="Master Customer Cashback">
				<header>
					<button name="action_confirm" states="draft" string="Confirm " type="object"/>
					<button name="action_cancel" states="draft" string="Cancel" type="object"/>
					<field name="state" statusbar_visible="draft,confirm" widget="statusbar"/>
				</header>
				<sheet>
					<div class="oe_title">
						<h1>
							<field name="name" readonly="1"/>
						</h1>
					</div>
					<group>
						<group>
							<field attrs="{'readonly': [('state', 'not in', ('draft'))]}" name="cashback_name" required="1"/>
							<field attrs="{'readonly': [('state', 'not in', ('draft'))]}" name="date" required="1"/>
							<field attrs="{'readonly': [('state', 'not in', ('draft'))]}" name="cashback_type" required="1"/>
							<field attrs="{'readonly': [('state', 'not in', ('draft'))],'invisible': [('cashback_type', '=', 'group')],'required': [('cashback_type', '=', 'customer')]}" name="partner_id"/>
							<field attrs="{'readonly': [('state', 'not in', ('draft'))],'invisible': [('cashback_type', '=', 'customer')],'required': [('cashback_type', '=', 'group')]}" name="group_id"/>
							<field attrs="{'readonly': [('state', 'not in', ('draft'))], 'required': [('cashback_deduction_option', '=', 'customer_invoice')]}" name="account_id"/>
							<field attrs="{'readonly': [('state', 'not in', ('draft'))]}" name="company_id"/>
						</group>
						<group>
							<field name="cashback_in" readonly="1"/>
							<field name="cashback_used" readonly="1"/>
							<field name="balance"/>
							<field name="cashback_deduction_option" readonly="1"/>
							<field name="cashback_pending"/>
							<field name="journal_id" required="1" attrs="{'readonly': [('state', 'not in', ('draft'))]}"/>
							<field attrs="{'readonly': [('state', 'not in', ('draft'))], 'required': [('cashback_deduction_option', '=', 'customer_invoice')]}" name="expense_account_id"/>
						</group>
					</group>
					<notebook>
						<page name="lines" string="Cashback Transaction Summary">
							<field name="line_ids">
								<tree create="0" delete="0" edit="0">
									<field name="name"/>
									<field name="partner_id"/>
									<field name="date"/>
									<field name="type_id"/>
									<field name="default_posting"/>
									<field name="value"/>
									<field name="reference"/>
									<field name="state"/>
								</tree>
							</field>
						</page>
						<page name="manual_lines" string="Cashback Transaction Manual">
							<group name="cashback">
								<button class="oe_highlight" name="%(customer_cashback.create_cashback)d" string="Create Cashback" type="action" context="{'partner_id': partner_id, 'group_id': group_id}"/>
								<newline/>
								<field name="manual_line_ids" nolabel="1" options="{'reload_on_button': True}">
									<tree create="false" edit='false'>
										<field name="date"/>
										<field name="type_id"/>
										<field name="default_posting"/>
										<field name="value"/>
										<field name="reference"/>
										<field name="state"/>
										<field name="user_id"/>
									</tree>
									<form string="Create Cashback" create="false" edit='false'>
										<header>
											<button class="btn-primary" name="action_approve" states="waiting_for_approval" string="Approve" type="object" groups="customer_cashback.group_customer_cashback_manager"/>
											<button class="btn-primary" name="action_waiting_for_approval" states="draft" string="Request Approval" type="object"/>
											<field name="state" statusbar_visible="draft,waiting_for_approval,approve" widget="statusbar"/>
										</header>
										<sheet string="Cashback">
											<group>
												<group>
													<field name="date" required="1"/>
													<field name="type_id" required="1"/>
													<field name="default_posting"/>
												</group>
												<group>
													<field name="user_id" readonly="1"/>
													<field name="reference" required="1"/>
													<field name="cashback_calculation"/>
												</group>
											</group>
											<group string="Cashback Calculation" attrs="{'invisible': [('cashback_calculation', '=', False)]}">
												<group>
													<field name="start_date"/>
													<field name="real_omset"/>
													<field name="total_omset"/>
													<field name="final_omset"/>
												</group>
												<group>
													<field name="end_date"/>
													<field class="oe_inline" name="cashback"/>%</group>
											</group>
											<!-- <button name="action_calculate" type="object" string='Calculate'/> -->
											<group col="2">
												<field name="value" required="1"/>
											</group>
											<field mode="tree" name="line_ids" attrs="{'invisible': [('cashback_calculation', '=', False)]}">
												<tree editable="bottom">
													<field name="so_date"/>
													<field name="so_id"/>
													<field name="so_value"/>
												</tree>
											</field>
										</sheet>
									</form>
								</field>
							</group>
						</page>
					</notebook>
				</sheet>
			</form>
		</field>
	</record>
	<record id="view_master_customer_cashback_tree" model="ir.ui.view">
		<field name="name">Master Customer Cashback Tree View</field>
		<field name="model">master.customer.cashback</field>
		<field name="arch" type="xml">
			<tree string="Master Customer Cashback">
				<field name="name"/>
				<field name="date"/>
				<field name="cashback_type"/>
				<field name="cashback_in"/>
				<field name="cashback_used"/>
				<field name="balance"/>
				<field name="state"/>
			</tree>
		</field>
	</record>
	<record id="action_master_customer_cashback" model="ir.actions.act_window">
		<field name="name">Master Customer Cashback</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">master.customer.cashback</field>
		<field name="view_mode">tree,form</field>
		<field name="help" type="html">
			<p class="oe_view_nocontent_create">Click to add Master Customer Cashback
			</p>
		</field>
	</record>


	<menuitem id="menu_customer_cashback" name="Customer Cashback" sequence="6" groups="customer_cashback.group_show_customer_cashback_menu"/>
	<menuitem action="action_master_customer_cashback" id="menu_master_customer_cashback" parent="menu_customer_cashback" sequence="1"/>
</odoo>