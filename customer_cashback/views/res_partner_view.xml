<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="inherit_view_partner_form_cashback"
			model="ir.ui.view">
			<field name="name">res.partner.form.cashback</field>
			<field name="model">res.partner</field>
			<field name="inherit_id" ref="base.view_partner_form" />
			<field name="arch" type="xml">
				<xpath expr="//page[@name='sales_purchases']/group">
					<group string="Cashback" name="cashback">
						<field name="cashback_generate" required="1"/>
						<field name="get_cashback" attrs="{'invisible': [('cashback_generate', '=', 'auto')]}"/>
						<field name="edit_cashback" attrs="{'invisible': [('cashback_generate', '=', 'auto')]}"/>
					</group>
				</xpath>
				<xpath expr="//notebook" position="inside">
					<page name="omset" string="Omset">
						<group>
							<group>
								<field name="type_omset" required='1'/>
							</group>
							<group>
								<field name="value_omset" attrs="{'invisible': [('type_omset', '=', 'periodic')]}"/>
							</group>
						</group>
						<field name="omset_ids" mode="tree" attrs="{'invisible': [('type_omset', '=', 'fixed')]}">
							<tree editable="top">
								<field name="start_date" required='1'/>
								<field name="end_date" required='1'/>
								<field name="value_omset" required='1'/>
							</tree>
						</field>
					</page>
				</xpath>
			</field>
		</record>
	</data>
</odoo>