<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="report_cashback_new">
    <t t-call="report.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-call="report.internal_layout">
                <div class="page">
                    <style>
                        .ch-header{
                            width: 100%;
                        }
                        .cb-header td{
                            font-weight: bold;
                            padding: 5px;
                            font-family: Arial, Helvetica, sans-serif;
                            font-size: 9pt;
                        }
                        .cb-header td span{
                            font-family: Arial, Helvetica, sans-serif;
                            font-size: 9pt;
                        }
                        .cb-table{
                            width: 100%;
                            padding: 5px;
                            border-top: 1px solid black;
                            border-collapse: collapse;
                        }
                        .cb-table thead tr th{
                            padding: 5px;
                            text-align: center;
                            border: 1px solid black;
                            font-weight: bold;
                            border-collapse: collapse;
                            font-family: Arial, Helvetica, sans-serif;
                            font-size: 9pt;
                        }
                        .cb-table tbody tr td{
                            padding: 5px;
                            color: #000000;
                            border: 1px solid black;
                            border-collapse: collapse;
                            font-family: Arial, Helvetica, sans-serif;
                            font-size: 9pt;
                        }
                        .cb-table tbody tr td span,
                        .cb-table tbody tr td strong{
                            font-family: Arial, Helvetica, sans-serif;
                            font-size: 9pt;
                        }
                    </style>
                    <center><h2><strong>Mutasi Cashback Customer</strong></h2></center>

                    <div class="row mt32 mb32">
                        <div class="col-xs-6">
                            <table border="0" class="cb-header">
                                <tr>
                                    <td width="40%">Kode Customer</td>
                                    <td width="5%">:</td>
                                    <td width="55%"><span t-esc="records['code']"/></td>
                                </tr>
                                <tr>
                                    <td>Date</td>
                                    <td>:</td>
                                    <td><span t-esc="records['date']"/></td>
                                </tr>
                                <tr>
                                    <td>Customer Group</td>
                                    <td>:</td>
                                    <td><span t-esc="records['group']"/></td>
                                </tr>
                                <tr>
                                    <td>Company</td>
                                    <td>:</td>
                                    <td><span t-esc="records['company']"/></td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-xs-6">
                            <table border="0" class="cb-header">
                                <tr>
                                    <td width="40%">Periode</td>
                                    <td width="5%">:</td>
                                    <td width="55%"><span t-esc="records['period']"/></td>
                                </tr>
                                <tr>
                                    <td>Previous Balance</td>
                                    <td>:</td>
                                    <td><span t-esc="records['prev_balance']"/></td>
                                </tr>
                                <tr>
                                    <td>Cashback In</td>
                                    <td>:</td>
                                    <td><span t-esc="records['cashback_in']"/></td>
                                </tr>
                                <tr>
                                    <td>Cashback Used</td>
                                    <td>:</td>
                                    <td><span t-esc="records['cashback_used']"/></td>
                                </tr>
                                <tr>
                                    <td>Balance</td>
                                    <td>:</td>
                                    <td><span t-esc="records['balance']"/></td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    <table class="cb-table">
                        <thead>
                            <tr>
                                <th>No Bukti / Type</th>
                                <th>Tanggal</th>
                                <th>Keterangan</th>
                                <th>Debet</th>
                                <th>Kredit</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="records['lines']" t-as="line">
                                <td><span t-esc="line['name']"/></td>
                                <td align="center"><span t-esc="line['date']"/></td>
                                <td><span t-esc="line['ref']"/></td>
                                <td align="right"><span t-esc="line['debit']"/></td>
                                <td align="right"><span t-esc="line['credit']"/></td>    
                            </tr>
                            <tr>
                                <td align="right" colspan="3"><strong>TOTAL</strong></td>
                                <td align="right"><strong><span t-att-style="style" t-esc="records['cashback_in']"/></strong></td>
                                <td align="right"><strong><span t-att-style="style" t-esc="records['cashback_used']"/></strong></td>    
                            </tr>
                        </tbody>
                    </table>

                </div>
            </t>
        </t>
    </t>
</template>
</odoo>
