    <record id="customer_cashback_line_inherit" model="ir.ui.view">
        <field name="name">customer.cashback.line.inherit</field>
        <field name="model">master.customer.cashback</field>
        <field name="inherit_id" ref="customer_cashback.view_master_customer_cashback_form"/>
        <field name="arch" type="xml">
            <!-- <button name="action_cancel" position="after">
                <button name="print_cashback_report" string="Print Report" type="object"/>
            </button> -->
            <field name="cashback_type" position="attributes">
                <attribute name="readonly">1</attribute>
            </field>
            <page name="manual_lines" position="after">
                <page name="automatic_cashback" string="Automatic Cashback">
                    <group name="cashback">
                        <field name="automatic_line_ids" nolabel="1" options="{'reload_on_button': True}">
                            <tree create="false" edit='false'>
                                <field name="date"/>
                                <field name="type_id"/>
                                <field name="default_posting"/>
                                <field name="value"/>
                                <field name="reference"/>
                                <field name="state"/>
                                <field name="user_id"/>
                            </tree>
                            <form string="Autogenerated Cashback" create="false" edit="false">
                                <header>
                                    <button class="btn-primary" name="action_approve" states="waiting_for_approval" string="Approve" type="object" groups="customer_cashback.group_customer_cashback_manager"/>
                                    <button class="btn-primary" name="action_waiting_for_approval" states="draft" string="Request Approval" type="object"/>
                                    <field name="state" statusbar_visible="draft,waiting_for_approval,approve" widget="statusbar"/>
                                </header>
                                <sheet string="Cashback">
                                    <group>
                                        <group>
                                            <field name="date" required="1"/>
                                            <field name="type_id" required="1"/>
                                            <field name="default_posting"/>
                                        </group>
                                        <group>
                                            <field name="user_id" readonly="1"/>
                                            <field name="reference" required="1"/>
                                        </group>
                                    </group>
                                    <group col="2">
                                        <field name="value" required="1"/>
                                    </group>
                                </sheet>
                            </form>
                        </field>
                    </group>
                </page>
                <page name="payment_cashback" string="Pelunasan/Product Cashback">
                    <group name="cashback">
                        <field name="paid_line_ids" nolabel="1" options="{'reload_on_button': True}">
                            <tree create="false" edit='false'>
                                <field name="date"/>
                                <field name="type_id"/>
                                <field name="default_posting"/>
                                <field name="value"/>
                                <field name="reference"/>
                                <field name="amount_total"/>
                                <field name="total_day"/>
                                <field name="state"/>
                                <field name="user_id"/>
                            </tree>
                            <form string="Autogenerated Cashback" create="false" edit="false">
                                <header>
                                    <button class="btn-primary" name="action_approve" states="waiting_for_approval" string="Approve" type="object" groups="customer_cashback.group_customer_cashback_manager"/>
                                    <button class="btn-primary" name="action_waiting_for_approval" states="draft" string="Request Approval" type="object"/>
                                    <field name="state" statusbar_visible="draft,waiting_for_approval,approve" widget="statusbar"/>
                                </header>
                                <sheet string="Cashback">
                                    <group>
                                        <group>
                                            <field name="reference" required="1"/>
                                            <field name="date" required="1"/>
                                            <field name="type_id" required="1"/>
                                            <field name="default_posting"/>
                                        </group>
                                        <group>
                                            <field name="user_id" readonly="1"/>
                                            <field name="invoice_id" required="1"/>
                                            <field name="payment_id" required="1"/>
                                            <field name="amount_total" required="1"/>
                                            <field name="total_day" required="1"/>
                                        </group>
                                    </group>
                                    <group col="2">
                                        <field name="value" required="1"/>
                                    </group>
                                </sheet>
                            </form>
                        </field>
                    </group>
                </page>
            </page>
        </field>
    </record>

    <record id="cashback_rule_form" model="ir.ui.view">
        <field name="name">cashback.rule.form</field>
        <field name="model">cashback.rule</field>
        <field name="arch" type="xml">
            <form string="Cashback Rule">
                <header>
                    <button string="Approve" name="action_approve" states="draft" type="object" class="btn-primary" groups="adireksa_cashback_pattern.group_cashback_pattern_manager"/>
                    <button string="Cancel" name="action_cancel" states="approve" type="object" class="btn-primary" groups="adireksa_cashback_pattern.group_cashback_pattern_manager"/>
                    <button string="Set to Draft" name="action_draft" states="cancel" type="object" class="btn-primary" groups="adireksa_cashback_pattern.group_cashback_pattern_manager"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,approve,cancel"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" attrs="{'readonly': [('state','!=', 'draft')]}"/>
                            <field name="period" required="1" attrs="{'readonly': [('state','!=', 'draft')]}"/>
                            <field name="company_id" required="1" attrs="{'readonly': [('state','!=', 'draft')]}" options="{'no_create': True, 'no_create_edit':True}"/>
                        </group>
                        <group>
                            <field name="notes"/>
                        </group>
                    </group>
                    <notebook colspan="4">
                        <page string="Cashback Formula">
                            <div style="margin-top: 10px;" attrs="{'invisible': [('state','=', 'draft')]}" >
                                <strong groups="adireksa_cashback_pattern.group_cashback_pattern_manager">Generate Cashback:</strong>
                                <!--<button class="oe_highlight" name="compute_annual_cashback" string="Annually" type="object" style="margin-left: 5px;" groups="adireksa_cashback_pattern.group_cashback_pattern_manager"/>-->
                                <button class="oe_highlight" name="compute_6month_cashback" string="6 Month" type="object" style="margin-left: 5px;" groups="adireksa_cashback_pattern.group_cashback_pattern_manager"/>
                                <button class="oe_highlight" name="compute_quarter_cashback" string="Quarterly" type="object" style="margin-left: 5px;" groups="adireksa_cashback_pattern.group_cashback_pattern_manager"/>
                                <button class="oe_highlight" name="compute_month_cashback" string="Monthly" type="object" style="margin-left: 5px;" groups="adireksa_cashback_pattern.group_cashback_pattern_manager"/>
                            </div>
                            <field name="line_ids" context="{'default_rule_id': id}" attrs="{'readonly': [('state','!=', 'draft')]}">
                                <tree>
                                    <field name="sequence"/>
                                    <field name="name"/>
                                    <field name="trigger"/>
                                    <field name="frequency"/>
                                    <field name="sub_type"/>
                                    <field name="formula"/>
                                </tree>
                                <form>
                                    <group>
                                        <group>
                                            <field name="sequence"/>
                                            <field name="name" required="1"/>
                                            <field name="trigger" required="1"/>
                                            <field name="frequency" required="1"/>
                                            <field name="sub_type" required="1"/>
                                        </group>
                                        <group>
                                            <field name="formula" required="1" attrs="{'invisible': [('trigger','=','promo')]}"/>
                                            <field name="target_modifier" attrs="{'invisible': [('trigger','!=','revenue')]}"/>
                                            <field name="sales_target" attrs="{'invisible': [('trigger','!=','sales')]}"/>
                                            <label for="day1" string="Day Range" attrs="{'invisible': [('sub_type','!=','lunas')]}"/>
                                            <div class="o_row" attrs="{'invisible': [('sub_type','!=','lunas')]}"><field name="day1" class="oe_inline"/> - <field name="day2" class="oe_inline"/></div>
                                        </group>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

