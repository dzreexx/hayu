<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_stock_warehouse_form_inherit" model="ir.ui.view">
        <field name="name">view.stock.warehouse.views</field>
        <field name="model">stock.warehouse</field>
        <field name="inherit_id" ref="stock.view_warehouse"/>
        <field name="arch" type="xml">
            <field name="code" position="after">
                <field name="is_pack"/>
            </field>
        </field>
    </record>

    <!-- STOK WAREHOUSE ORDERPOINT -->
    <record id="view_stock_warehouse_orderpoint_form_inherit" model="ir.ui.view">
        <field name="name">view.stock.warehouse.orderpoint.views</field>
        <field name="model">stock.warehouse.orderpoint</field>
        <field name="inherit_id" ref="stock.view_warehouse_orderpoint_tree_editable_config"/>
        <field name="arch" type="xml">
            <field name="product_max_qty" position="after">
                <field name="qty_pack"/>
                <field name="packaging_id" options="{'no_create':True}" domain="[('product_id','=',product_id)]"/>
            </field>
        </field>
    </record>   
</odoo>