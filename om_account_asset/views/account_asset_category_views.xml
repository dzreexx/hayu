<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_account_asset_category_form" model="ir.ui.view">
        <field name="name">account.asset.category.form</field>
        <field name="model">account.asset.category</field>
        <field name="arch" type="xml">
            <form string="Asset Category">
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="Asset Type" class="oe_edit_only"
                               attrs="{'invisible': [('asset_type','!=','purchase')]}"/>
                        <label for="name" string="Prepaid Expense Type" class="oe_edit_only"
                               attrs="{'invisible': [('asset_type','!=','expense')]}"/>
                        <label for="name" string="Deferred Revenue Type" class="oe_edit_only"
                               attrs="{'invisible': [('asset_type','!=','sale')]}"/>
                        <h1>
                            <field name="name" placeholder="e.g. Computers"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Journal Entries">
                            <field name="journal_id" required="1"/>
                            <!-- DEFERRED REVENUE -->
                            <field name="account_depreciation_id" string="Revenue Account" attrs="{'invisible': [('asset_type', '!=', 'sale')]}" required="1"/>
                            <field name="account_depreciation_expense_id" string="Accum Depr. Account" attrs="{'invisible': [('asset_type', '!=', 'sale')]}" required="1"/>
                            <!-- ASSET & DEFERRED EXPENSE -->
                            <field name="account_asset_id" attrs="{'required': [('asset_type', '=', 'purchase')], 'invisible': [('asset_type', '!=', 'purchase')]}"/>
                            <field name="account_depreciation_id" string="Accum Depr. Account" attrs="{'invisible': [('asset_type', '=', 'sale')]}" required="1"/>
                            <field name="account_depreciation_expense_id" string="Expense Account" attrs="{'invisible': [('asset_type', '=', 'sale')]}" required="1"/>
                            <!-- ASSET -->
                            <field name="account_depreciation_disposal_id" attrs="{'required': [('asset_type','=','purchase')], 'invisible': [('asset_type', '!=', 'purchase')]}"/>
                            <field name="account_analytic_id" domain="[('company_id', '=', company_id)]" groups="analytic.group_analytic_accounting"/>
                            <field name="analytic_tag_ids" groups="analytic.group_analytic_tags" widget="many2many_tags"/>
                            <field name="asset_type" invisible="1"/>
                        </group>
                        <group string="Periodicity">
                            <field name="method_time" widget="radio"
                                   attrs="{'invisible': [('asset_type','=','sale')]}"/>
                            <field name="method_number" string="Number of Entries"
                                   attrs="{'invisible':['|',('method_time','!=','number'), ('asset_type','=', False)],
                                    'required':[('method_time','=','number')]}"/>
                            <label for="method_period" string="One Entry Every"/>
                            <div>
                                <field name="method_period" nolabel="1" attrs="{'invisible': [('asset_type','=', False)]}" class="oe_inline"/> months
                            </div>
                            <field name="method_end"
                                   attrs="{'required': [('method_time','=','end')], 'invisible':[('method_time','!=','end')]}"/>
                            <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"/>
                        </group>
                        <group string="Additional Options">
                            <field name="open_asset"/>
                            <field name="group_entries"/>
                            <field name="date_first_depreciation"/>
                            <field name="day_range" attrs="{'invisible':[('date_first_depreciation','=','manual')]}"/>
                        </group>
                        <group attrs="{'invisible': [('asset_type','=','sale')]}" string="Depreciation Method">
                            <field name="method" widget="radio"/>
                            <field name="method_progress_factor"
                                   attrs="{'invisible':[('method','=','linear')], 'required':[('method','=','degressive')]}"/>
                            <field name="prorata" attrs="{'invisible': [('method_time','=','end')]}"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_account_asset_asset_category_kanban" model="ir.ui.view">
        <field name="name">account.asset.category.kanban</field>
        <field name="model">account.asset.category</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="journal_id"/>
                <field name="method"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="row mb4">
                                <div class="col-6">
                                    <strong>
                                        <span>
                                            <t t-esc="record.name.value"/>
                                        </span>
                                    </strong>
                                </div>
                                <div class="col-6 text-right">
                                    <span class="badge badge-pill">
                                        <strong>
                                            <t t-esc="record.method.value"/>
                                        </strong>
                                    </span>
                                </div>
                            </div>
                            <div>
                                <t t-esc="record.journal_id.value"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_account_asset_category_tree" model="ir.ui.view">
        <field name="name">account.asset.category.tree</field>
        <field name="model">account.asset.category</field>
        <field name="arch" type="xml">
            <tree string="Asset category">
                <field name="name"/>
                <field name="journal_id"/>
                <field name="account_asset_id"/>
                <field name="account_depreciation_id"/>
                <field name="method_number" string="Number of Depreciations"/>
                <field name="method_period" string="Period length"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>

    <record id="view_account_asset_category_search" model="ir.ui.view">
        <field name="name">account.asset.category.search</field>
        <field name="model">account.asset.category</field>
        <field name="arch" type="xml">
            <search string="Search Asset Category">
                <filter string="Sales" name="sales" domain="[('asset_type','=', 'sale')]" help="Deferred Revenues"/>
                <filter string="Purchase" name="purchase" domain="[('asset_type','=', 'purchase')]" help="Assets"/>
                <field name="name" string="Category"/>
                <field name="journal_id"/>
                <group expand="0" string="Group By...">
                    <filter string="Type" name="asset_type" domain="[]" context="{'group_by':'asset_type'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_account_asset_asset_list_normal_purchase" model="ir.actions.act_window">
        <field name="name">Fixed Asset</field>
        <field name="res_model">account.asset.category</field>
        <field name="domain">[('asset_type', '=', 'purchase')]</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{'default_asset_type': 'purchase'}</field>
    </record>

</odoo>
