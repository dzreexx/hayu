<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_invoice_asset_category" model="ir.ui.view">
        <field name="name">account.move.supplier.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                <field name="has_asset_line" invisible="1"/>
                <field name="is_depreciation" invisible="1"/>
                <field name="asset_id" invisible="1"/>
                <field name="asset_type" invisible="1"/>
                <field name="asset_display_name" invisible="1"/>
                <field name="number_asset_ids" invisible="1"/>
                <!-- <field name="draft_asset_ids" invisible="1"/> -->
                <button name="open_asset_view"
                    attrs="{'invisible': ['|', ('asset_id', '=', False), ('asset_type', '=', 'sale')]}"
                    class="oe_stat_button"
                    icon="fa-cube"
                    type="object">
                    <field name="asset_display_name" nolabel="1"/>
                </button>
                <!-- <button name="action_open_asset_ids"
                    type="object"
                    class="oe_stat_button"
                    icon="fa-id-card-o"
                    attrs="{'invisible': [('number_asset_ids', '=', 0)]}">
                    <field name="asset_display_name" nolabel="1"/>
                </button> -->
                <!-- <button name="action_open_asset_ids"
                    type="object"
                    class="oe_stat_button text-danger"
                    icon="fa-id-card-o"
                    attrs="{'invisible': ['|', ('number_asset_ids', '=', 0), ('draft_asset_ids', '=', False)]}">
                    <field name="asset_ids_display_name" nolabel="1"/>
                </button> -->
            </xpath>
            <xpath expr="//group[@name='accounting_info_group']" position="inside">
                <field name="method_number" attrs="{'invisible': [('has_asset_line','=',False)]}"/>
            </xpath>
            <xpath expr="//group[@id='other_tab_entry_group']/group[2]" position="inside">
                <field name="method_number" attrs="{'invisible': [('has_asset_line','=',False)]}"/>
            </xpath>
            
            <!-- <xpath expr="//field[@name='auto_post'][last()]" position="after">
                <field name="method_number" attrs="{'invisible': [('has_asset_line','=',False)]}"/>
            </xpath> -->
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='account_id']" position="before">
                <field name="asset_category_id" string="Asset Category" optional="hide"/>
                <!-- <field name="is_depreciation" invisible="1"/> -->
            </xpath>
            <xpath expr="//field[@name='line_ids']/tree/field[@name='account_id']" position="before">
                <field name="asset_category_id" string="Asset Category" optional="hide"/>
                <!-- <field name="is_depreciation" invisible="1"/> -->
            </xpath>
        </field>
    </record>

    <record id="view_move_line_form_asset_om_inherit" model="ir.ui.view">
        <field name="name">account.move.line.form</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_form"/>
        <field name="arch" type="xml">
            <field name="move_id" position="after">
                <field name="asset_ids" attrs="{'invisible': [('asset_ids','=',[])]}" widget="many2many_tags"/>
                <!-- <field name="is_depreciation" invisible="1"/> -->
            </field>
        </field>
    </record>

    <record id="turn_as_asset_view_move_line_tree" model="ir.ui.view">
        <field name="name">account.move.line.tree</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_tree"/>
        <field name="arch" type="xml">
            <field name="parent_state" position="after">
                <field name="create_asset" invisible="1"/>
                <!-- <field name="is_depreciation" invisible="1"/> -->
                <button name="turn_as_asset" type="object" string="Create Asset" attrs="{'invisible': [('create_asset','=','no')]}" groups="account.group_account_user"/>
            </field>
        </field>
    </record>


    <record id="view_account_move_line_budget_filter" model="ir.ui.view">
        <field name="name">account.move.line.search</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_account_move_line_filter"/>
        <field name="arch" type="xml">
            <filter name="to_check" position="after">
                <filter string="Create Asset" name="create_asset" domain="[('create_asset', '!=', 'no')]"/>
            </filter>
        </field>
    </record>
        

    <record model="ir.actions.server" id="action_account_aml_create_to_asset">
        <field name="name">Create Asset</field>
        <field name="groups_id" eval="[(4, ref('account.group_account_user'))]"/>
        <field name="model_id" ref="account.model_account_move_line"/>
        <field name="binding_model_id" ref="account.model_account_move_line" />
        <field name="state">code</field>
        <field name="code">
if records:
    action = records.turn_as_asset()
        </field>
    </record>

</odoo>
