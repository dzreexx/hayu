<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_account_asset_category_expense_tree" model="ir.ui.view">
        <field name="name">account.asset.category.tree</field>
        <field name="model">account.asset.category</field>
        <field name="arch" type="xml">
            <tree string="Asset category">
                <field name="name" string="Prepaid Name"/>
                <field name="journal_id"/>
                <field name="account_depreciation_id" string="Prepaid Expense Account"/>
                <field name="account_depreciation_expense_id" string="Expense Account"/>
                <field name="method_number" string="Number of Recognitions"/>
                <field name="method_period"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>

    <record id="view_account_asset_category_expense_form" model="ir.ui.view">
        <field name="name">account.asset.category.form</field>
        <field name="model">account.asset.category</field>
        <field name="inherit_id" ref="om_account_asset.view_account_asset_category_form"/>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <field name="account_depreciation_expense_id" position="attributes">
                <attribute name="string">Expense Account</attribute>
                <attribute name="help">Account used to recognize the expense</attribute>
            </field>
            <field name="account_depreciation_id" position="attributes">
                <attribute name="string">Prepaid Expense Account</attribute>
                <attribute name="help">Account used to record the deferred expense</attribute>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="view_account_asset_asset_expense_tree">
        <field name="name">account.asset.asset.expense.tree</field>
        <field name="model">account.asset.asset</field>
        <field name="arch" type="xml">
            <tree string="Deferred Expenses">
                <field name="name" string="Expense"/>
                <field name="first_depreciation_manual_date"/>
                <field name="value"/>
                <field name="depreciation_monthly_value" widget="monetary"/>
                <field name="depreciation_entries_count"/>
                <field name="depreciation_entries_value" widget="monetary"/>
                <field name="depreciation_residual_count"/>
                <field name="value_residual" widget="monetary"/>
                <field name="currency_id" groups="base.group_multi_currency"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="state" widget="badge"
                           decoration-success="state == 'open'"
                           decoration-danger="state == 'cancel'"
                           decoration-warning="state == 'draft'"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="view_account_asset_asset_expense_form">
        <field name="name">account.asset.asset.expense.form</field>
        <field name="model">account.asset.asset</field>
        <field name="inherit_id" ref="om_account_asset.view_account_asset_asset_form"/>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <xpath expr="/form" position="attributes">
                <attribute name="string">Expense Recognition</attribute>
            </xpath>
            <xpath expr="//button[@name='compute_depreciation_board']" position="attributes">
                <attribute name="string">Compute Expense</attribute>
            </xpath>
            <xpath expr="//button[@name='%(om_account_asset.action_asset_modify)d']" position="attributes">
                <attribute name="string">Modify Expense</attribute>
            </xpath>
            <!-- <xpath expr="//page[@name='related_items']" position="attributes">
                <attribute name="string">Related Expenses</attribute>
            </xpath>
            <xpath expr="//label[@name='name_label']" position="attributes">
                <attribute name="string">Deferred Expense name</attribute>
            </xpath>
            <xpath expr="//label[@name='model_name_label']" position="attributes">
                <attribute name="string">Deferred Expense Model name</attribute>
            </xpath> -->
            <field name="name" position="attributes">
                <attribute name="placeholder">e.g. Annually Paid Insurance</attribute>
            </field>
            <!-- <field name="account_depreciation_expense_id" position="attributes">
                <attribute name="string">Expense Account</attribute>
                <attribute name="help">Account used to recognize the expense</attribute>
            </field>
            <field name="account_depreciation_id" position="attributes">
                <attribute name="string">Deferred Expense Account</attribute>
                <attribute name="help">Account used to record the deferred expense</attribute>
            </field> -->
            <field name="value" position="attributes">
                <attribute name="string">Deferred Expense Amount</attribute>
            </field>
            <!-- <field name="model_id" position="attributes">
                <attribute name="domain">[('state', '=', 'model'), ('account_asset_id.user_type_id', '=?', user_type_id), ('type', '=', 'expense')]</attribute>
                <attribute name="context">{'default_type': 'expense'}</attribute>
            </field> -->
            <xpath expr="//page[@name='depreciation_board']" position="attributes">
                <attribute name="string">Expense Board</attribute>
            </xpath>
            <xpath expr="//field[@name='depreciation_line_ids']/tree" position="attributes">
                <attribute name="string">Expense Lines</attribute>
            </xpath>
            <xpath expr="//field[@name='depreciation_line_ids']//field[@name='depreciation_date']" position="attributes">
                <attribute name="string">Expense Date</attribute>
            </xpath>
            <xpath expr="//field[@name='depreciation_line_ids']//field[@name='depreciated_value']" position="attributes">
                <attribute name="string">Cumulative Expense</attribute>
            </xpath>
            <xpath expr="//field[@name='depreciation_line_ids']//field[@name='amount']" position="attributes">
                <attribute name="string">Expense</attribute>
            </xpath>
            <xpath expr="//field[@name='depreciation_line_ids']//field[@name='remaining_value']" position="attributes">
                <attribute name="string">Next Period Expense</attribute>
            </xpath>
            <field name="original_move_line_ids" position="attributes">
                <attribute name="domain">[('credit', '=', '0'), ('move_id.state', '=', 'posted')]</attribute>
            </field>
        </field>
    </record>

    <!-- Deferred Expenses Action -->

    <record model="ir.actions.act_window" id="action_account_asset_expense_form">
        <field name="name">Prepaid Expenses</field>
        <field name="res_model">account.asset.asset</field>
        <field name="domain">[('asset_type', '=', 'expense'), ('parent_id', '=', False)]</field>
        <field name="context">{'asset_type': 'expense', 'default_asset_type': 'expense'}</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('view_account_asset_asset_expense_tree')}),
            (0, 0, {'view_mode': 'kanban'}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('view_account_asset_asset_expense_form')})]"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create new deferred expense
            </p>
        </field>
    </record>


    <record id="action_account_asset_expense_list_normal_purchase" model="ir.actions.act_window">
        <field name="name">Prepaid Expense</field>
        <field name="res_model">account.asset.category</field>
        <field name="domain">[('asset_type', '=', 'expense')]</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{'default_asset_type': 'expense'}</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('view_account_asset_category_expense_tree')}),
            (0, 0, {'view_mode': 'kanban'}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('view_account_asset_category_expense_form')})]"/>
    </record>

