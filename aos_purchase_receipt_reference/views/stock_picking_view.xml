<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="purchase_receipt_vendor_reference_form_view" model="ir.ui.view">
        <field name="name">purchase_receipt_vendor_reference_form_view</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='origin']" position="after">
                <field name="partner_ref" attrs="{'invisible':[('picking_type_code', '!=', 'incoming')]}"/>
            </xpath>
        </field>
    </record>

    <record id="purchase_receipt_vendor_reference_tree_view" model="ir.ui.view">
        <field name="name">purchase_receipt_vendor_reference_tree_view</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.vpicktree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='origin']" position="before">
                <field name="partner_ref" optional="hide"/> 
            </xpath>
        </field>
    </record>

</odoo>
