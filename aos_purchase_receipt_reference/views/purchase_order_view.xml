<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="purchase_order_vendor_ref_required" model="ir.ui.view">
        <field name="name">purchase_order_vendor_ref_required</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_ref']" position="attributes">
                <attribute name="attrs">{'required':[('state','in',('draft','sent'))],'readonly':[('state','in',('purchase','done'))]}</attribute>
            </xpath>
        </field>
    </record>    

</odoo>
