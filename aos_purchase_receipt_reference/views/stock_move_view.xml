<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="purchase_receipt_reference_stock_move_tree_view" model="ir.ui.view">
        <field name="name">purchase.receipt.reference.stock.move.tree.view</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_move_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="before">
                <field name="create_date" optional="hide"/>
                <field name="partner_ref" optional="hide"/>
                <field name="picking_batch_id" optional="hide"/>
                <field name="purchase_id" optional="hide"/>
            </xpath>
        </field>
    </record>

</odoo>
