<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sale_agreement_tree_view" model="ir.ui.view">
        <field name="name">sale.agreement.tree.view</field>
        <field name="model">sale.agreement</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="create_date"/>
                <field name="create_uid"/>
                <field name="customer_group_id" />
                <field name="start_date" />
                <field name="end_date" />
                <field name="company_id"/>
                <field name="state" decoration-info="state == 'draft'" decoration-muted="state == 'cancel'" decoration-danger="state == 'unlocked'" decoration-success="state == 'running'" widget="badge"/>
            </tree>
        </field>
    </record>

    <record id="sale_agreement_form_view" model="ir.ui.view">
        <field name="name">sale.agreement.form.view</field>
        <field name="model">sale.agreement</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="current_date" invisible="1"/>
                    <button string="Confirm" name="action_confirm" type="object" class="oe_highlight" states="draft"/>
                    <button string="Done" name="action_done" type="object" class="oe_highlight" states="running"/>
                    <button string="Confirm" name="action_confirm" type="object" class="oe_highlight" states="unlocked"/>
                    <button string="Unlocked" name="action_unlocked" type="object" states="running"/>
                    <button string="Cancel" name="action_cancel" type="object" attrs="{'invisible':[('state','in',['cancel','done'])]}"/>
                    <button string="Reset To Draft" name="action_to_draft" type="object" states="cancel"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,running,done,cancel"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_saleorder" type="object" attrs="{'invisible':[('sale_order_count','=',0)]}" class="oe_stat_button" icon="fa-money">
                            <field name="sale_order_count" string="Sales Order" widget="statinfo"/>
                        </button>
                    </div>
                    <label for="name" class="o_read_only"/>
                    <h1><field name="name" /></h1>
                    <group>
                        <group>
                            <field name="customer_group_id" options="{'no_create':True}" attrs="{'readonly':[('state','in',['done','cancel'])]}"/>
                            <field name="start_date" attrs="{'readonly':[('state','in',['done','cancel'])]}"/>
                            <field name="end_date" attrs="{'readonly':[('state','in',['done','cancel'])]}"/>
                        </group>
                        <group>
                          <field name="create_date" attrs="{'readonly':[('state','in',['done','cancel'])]}"/>
                          <field name="create_uid" attrs="{'readonly':[('state','in',['done','cancel'])]}"/>
                          <field name="company_id" attrs="{'readonly':[('state','in',['done','cancel'])]}"/> 
                        </group>
                    </group>
                    <notebook>
                        <page name="agreement_line" string="Agreement Line">
                            <field name="sales_agreement_line_ids" attrs="{'readonly':[('state','in',['running','done','cancel'])]}">
                                <tree editable="bottom">
                                    <field name="sales_agreement_id" invisible="1"/>
                                    <field name="category_id" options="{'no_create':True}"/>
                                    <field name="quantity_commitment"/>
                                    <field name="quantity_order"/>
                                    <field name="achievement_progress"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="activity_ids" widget="mail_activity" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

</odoo>
