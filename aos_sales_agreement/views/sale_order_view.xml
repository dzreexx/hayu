<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sale_aggrement_sale_order_view_form" model="ir.ui.view">
        <field name="name">sale_aggrement_sale_order_view_form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_shipping_id']" position="after">
                <field name="sale_agreement_id" attrs="{'invisible':[('sale_agreement_id','=',False)]}"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree" position="inside">
                <field name="sale_agreement_id" optional="show" attrs="{'column_invisible':[('parent.sale_agreement_id','=',False)]}"/>
            </xpath>
        </field>
    </record>
    
    <record id="sale_aggrement_sale_order_view_list" model="ir.ui.view">
        <field name="name">sale_aggrement_sale_order_view_list</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="before">
                <field name="sale_agreement_id" optional="hide"/>
            </xpath>
        </field>
    </record>


</odoo>
