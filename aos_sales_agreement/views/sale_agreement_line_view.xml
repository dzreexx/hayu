<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sale_agreement_line_tree_view" model="ir.ui.view">
        <field name="name">sale_agreement_line_tree_view</field>
        <field name="model">sale.agreement.line</field>
        <field name="arch" type="xml">
            <tree delete="0" duplicate="0" edit="0" create="0">
                <field name="sales_agreement_id" optional="hide"/>
                <field name="customer_group_id" optional="show"/>
                <field name="category_id" />
                <field name="quantity_commitment" />
                <field name="quantity_order" />
                <field name="achievement_progress" optional="show"/>
                <field name="state" optional="hide" decoration-info="state == 'draft'" decoration-muted="state == 'cancel'" decoration-danger="state == 'unlocked'" decoration-success="state == 'running'" widget="badge"/>
            </tree>
        </field>
    </record>

    <record id="sale_agreement_line_form_view_readonly" model="ir.ui.view">
        <field name="name">sale_agreement_line_form_view</field>
        <field name="model">sale.agreement.line</field>
        <field name="arch" type="xml">
            <form delete="0" duplicate="0" edit="0" create="0">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,running,done,cancel"/>
                </header>
                <sheet>
                    <h1><field name="customer_group_id" readonly="1"/></h1>
                    <group>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="sales_agreement_id" readonly="1"/>
                            <field name="category_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="quantity_commitment" readonly="1"/>
                            <field name="quantity_order" readonly="1"/>
                            <field name="achievement_progress" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
