<odoo>
     <data>
 
 
 <!-- INHERIT ACCOUNT MOVE -->
     <record id="view_account_move_inherit_product_related_fields" model="ir.ui.view">
          <field name="name">Add product_related_fields_in_account_move</field>
          <field name="model">account.move</field>
          <field name="inherit_id" ref="account.view_move_form"/>
          <field name="arch" type="xml">
              <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='name']" position="after">
                 <field name="product_brand" optional="hide" readonly="1"/>
                 <field name="internal_category" optional="hide" readonly="1"/>
                 <field name="part_number" optional="hide" readonly="1"/>
                 <field name="type_motor" widget="many2many_tags" options="{'color_field': 'color'}" optional="hide" readonly="1"/>
                 <field name="type_merk" widget="many2many_tags" options="{'color_field': 'color'}" optional="hide" readonly="1"/>
                 <field name="city" optional="hide"/>
                 <field name="state_id" optional="hide"/>
            </xpath>
            <!-- <xpath expr="//field[@name='invoice_line_ids']/form" position="after">
                 <field name="product_brand" optional="hide"/>
                 <field name="internal_category" optional="hide"/>
                 <field name="part_number" optional="hide"/>
                 <field name="type_motor" <field name="type_merk" widget="many2many_tags" options="{'color_field': 'color'}" optional="hide"/> widget="many2many_tags" options="{'color_field': 'color'}" optional="hide"/>
            </xpath> -->
          </field>
       </record>
     
          <!-- INVOICE REPORT -->
     <record id="invoice_report_field_tree_view_inherit" model="ir.ui.view">
          <field name="name">invoice.report.field.tree.view</field>
          <field name="model">account.invoice.report</field>
          <field name="inherit_id" ref="account.account_invoice_report_view_tree"/>
          <field name="arch" type="xml">
               <xpath expr="//tree/field[@name='company_id']" position="after">
                    <field name="city" optional="hide"/> 
                    <field name="state_id" optional="hide"/>
               </xpath>
          </field>
     </record>



     <record id="field_invoice_view_report" model="ir.ui.view">
          <field name="name">field.invoice.view.report</field>
          <field name="model">account.invoice.report</field>
          <field name="inherit_id" ref="account.view_account_invoice_report_search"/>
          <field name="arch" type="xml">
               <xpath expr="//filter[@name='company']" position="after">
                    <filter string="Brand" name="product_brand" context="{'group_by':'product_brand'}"/>
                    <filter string="Internal Category" name="internal_category" context="{'group_by':'internal_category'}"/>
                    <filter string="Part Number" name="part_number" context="{'group_by':'part_number'}"/>
                    <filter string="Tipe Motor" name="type_motor" context="{'group_by':'type_motor'}"/>
                    <filter string="Merk" name="type_merk" context="{'group_by':'type_merk'}"/>
                    <filter string="City" name="city" context="{'group_by':'city'}"/>
                    <filter string="State" name="state_id" context="{'group_by':'state_id'}"/>
               </xpath>
          </field>
     </record>

     </data>
</odoo>
     