<odoo>
     <data>
 
 
     <!-- INHERIT STOCK PICKING OPERATIONS-->
     <record id="view_stock_picking_inherit_product_related_fields" model="ir.ui.view">
          <field name="name">Add product_related_fields_in_inventory</field>
          <field name="model">stock.picking</field>
          <field name="inherit_id" ref="stock.view_picking_form"/>
          <field name="arch" type="xml">
               <xpath expr="//field[@name='move_ids_without_package']/tree/field[@name='product_id']" position="before"> 
                    <field name="product_brand" optional="hide" readonly="1"/>
                    <field name="internal_category" optional="hide" readonly="1"/>
                    <field name="part_number" optional="hide" readonly="1"/>
                    <field name="type_motor" widget="many2many_tags" options="{'color_field': 'color'}" optional="hide" readonly="1"/>
                    <field name="type_merk" widget="many2many_tags" options="{'color_field': 'color'}" optional="hide" readonly="1"/>
               </xpath>
          </field>
     </record>

     <!-- STOCK PICKING DETAILED OPERATIONS -->
     <record id="view_stock_picking_inherit_product_related_fields_detailed_operations" model="ir.ui.view">
          <field name="name">Add product_related_fields_in_detailed_operations_inventory</field>
          <field name="model">stock.move.line</field>
          <field name="inherit_id" ref="stock.view_stock_move_line_detailed_operation_tree"/> 
          <field name="arch" type="xml">
               <xpath expr="//field[@name='product_id']" position="after">  
                    <field name="product_brand" optional="hide" readonly="1"/>
                    <field name="internal_category" optional="hide" readonly="1"/>
                    <field name="part_number" optional="hide" readonly="1"/>
                    <field name="type_motor" widget="many2many_tags" options="{'color_field': 'color'}" optional="hide" readonly="1"/>
                    <field name="type_merk" widget="many2many_tags" options="{'color_field': 'color'}" optional="hide" readonly="1"/>
               </xpath>
          </field>
     </record>

