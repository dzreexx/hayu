<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- DOCUMENT TYPE -->
        <record id="document_type_view_tree" model="ir.ui.view">
            <field name="name">document.type.view.tree</field>
            <field name="model">document.type</field>
            <field name="arch" type="xml">
                <tree string="Document Type" editable="bottom">
                    <field name="name" />
                </tree>
            </field>
        </record>

        <!-- DOCUMENT TEMPLATE -->
        <record id="document_template_tree_view" model="ir.ui.view">
            <field name="name">document.template.view.tree</field>
            <field name="model">document.template</field>
            <field name="arch" type="xml">
                <tree string="Document Type">
                    <field name="name" />
                </tree>
            </field>
        </record>

        <record id="document_template_form_view" model="ir.ui.view">
            <field name="name">document.template.view.form</field>
            <field name="model">document.template</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <h1><field name="name" /></h1>
                        <group>
                            <group>
                                <field name="tenant_type" />
                            </group>
                        </group>
                        <group>
                            <field name="template_ids">
                                <tree editable="bottom">
                                    <field name="doc_id" options="{'no_create':True,'no_open':True}" invisible="1"/>
                                    <field name="document_type" options="{'no_create':True,'no_open':True}"/>
                                    <field name="is_required" />
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action -->
        <record id="action_document_type" model="ir.actions.act_window">
            <field name="name">Document Type</field>
            <field name="res_model">document.type</field>
            <field name="view_mode">tree</field>
        </record>

        <record id="action_document_template" model="ir.actions.act_window">
            <field name="name">Document Template</field>
            <field name="res_model">document.template</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu Item -->
        <menuitem
            id="document_template_config_parent_menu"
            name="Document Template"
            parent="contacts.res_partner_menu_config"
            sequence="10"/>

        <menuitem
            id="document_type_submenu"
            name="Document Type"
            action="action_document_type"
            parent="document_template_config_parent_menu"
            sequence="1"/>

        <menuitem
            id="document_template_submenu"
            name="Document Template"
            action="action_document_template"
            parent="document_template_config_parent_menu"
            sequence="2"/>
            
    </data>
</odoo>
