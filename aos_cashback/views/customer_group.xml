<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <record id="view_customer_group_form" model="ir.ui.view">
            <field name="name">view.customer.group.form</field>
            <field name="model">customer.group</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="area_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}"/>
                        </group>
                        <field name="partner_ids"/>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_customer_group_tree" model="ir.ui.view">
            <field name="name">view.customer.group.tree</field>
            <field name="model">customer.group</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="name"/>
                    <field name="area_id"/>
                </tree>
            </field>
        </record>

        <record id="customer_category_view_sale" model="ir.ui.view">
            <field name="name">customer.category.view.sale</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="customer_group" widget="many2one"/>
                </xpath>
            </field>
        </record>

        <record id="customer_category_view_form_account" model="ir.ui.view">
            <field name="name">customer.category.view.form.account</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="customer_group" widget="many2one"/>
                </xpath>
            </field>
        </record>



        <record id="view_customer_area_form" model="ir.ui.view">
            <field name="name">view.customer.area.form</field>
            <field name="model">customer.area</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="wilayah_target"/>
                            
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_customer_area_tree" model="ir.ui.view">
            <field name="name">view.customer.area.tree</field>
            <field name="model">customer.area</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="name"/>
                    <field name="wilayah_target"/>
                </tree>
            </field>
        </record>


        <record id="customer_target_line_form" model="ir.ui.view">
            <field name="name">Customer Target Form View</field>
            <field name="model">adireksa.customer.target.line</field>
            <field name="priority">1</field>
            <field name="arch" type="xml">
                <form string="Customer Target">
                    <header>
                        <button name="action_request_approval" string="Submit" states="draft" type="object"/>
                        <button name="action_approve" string="Approve" states="submit" type="object"/>
                        <button name="action_cancel" string="Cancel" states="approve" type="object"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,submit,approve"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="subtype" required="1"
                                       attrs="{'readonly': [('state', 'not in', ['draft'])]}"/>
                                <field name="frequency" required="1"
                                       attrs="{'readonly': [('state', 'not in', ['draft'])]}"/>
                                <field name="amount" attrs="{'readonly': [('state', 'not in', ['draft'])]}"/>
                            </group>
                            <group>
                                <field name="month1" attrs="{'readonly': [('state', 'not in', ['draft'])]}"/>
                                <field name="month2" attrs="{'readonly': [('state', 'not in', ['draft'])]}"/>
                            </group>
                        </group>
<!--                        <group>-->
<!--                            <field name="approve_by" readonly="1"/>-->
<!--                            <field name="date_approve" readonly="1"/>-->
<!--                            <field name="cancel_by" readonly="1"/>-->
<!--                            <field name="date_cancel" readonly="1"/>-->
<!--                        </group>-->
                    </sheet>
                </form>
            </field>
        </record>











    </data>
</odoo>