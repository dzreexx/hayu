<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <!-- Inherit Form View to Modify it -->
        <record id="view_inherit_res_partner_form" model="ir.ui.view">
            <field name="name">view.inherit.res_partner.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">

                <!-- position: after|before|replace|attributes|inside -->
                <xpath expr="//field[@name='category_id']" position="after">
                    <field name="year" invisible="1"/>
                    <field name="group_id" domain="[('period','=',year)]" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}" attrs="{'invisible':[('is_customers','=',False)],'readonly':[('state','=','approve')]}"/>
                    <field name="area_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}" attrs="{'invisible':[('is_customers','=',False)]}"/>
                    <field name="group_class_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}" attrs="{'invisible': [('is_customers','=',False)]}"/> 
                    <!-- Add your fields or attributes here -->
                </xpath>
                <xpath expr="//field[@name='property_product_pricelist']" position="attributes">
                    <attribute name="domain">[('group_class_id','=',group_class_id)]</attribute>
                </xpath>

            </field>
        </record>

        <record id="view_res_partner_inherit_tree" model="ir.ui.view">
            <field name="name">view.res.partner.inherit.tree</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_tree"/>
            <field name="arch" type="xml"> 
                <!-- position: after|before|replace|attributes|inside -->       
                <xpath expr="//field[@name='phone']" position="before">
                    <field name="group_id" optional="hide"/>
                    <field name="area_id" optional="hide" />
                    <field name="group_class_id" optional="hide"/>
                    <!-- Add your fields or attributes here -->
                </xpath>

            </field>
        </record>

    </data>
</odoo>