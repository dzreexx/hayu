<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <!-- Inherit Form View to Modify it -->
        <record id="sale_order_form_cashback" model="ir.ui.view">
            <field name="name">sale.order.form.cashback</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="group_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}" />
                    <field name="area_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}" />
                    <field name="group_class_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}" />
                </xpath>
                <xpath expr="//field[@name='pricelist_id']" position="attributes">
                    <attribute name="domain">[('group_class_id','=',group_class_id)]</attribute>
                </xpath>
            </field>
        </record>

        <record id="sale_quotations_tree_cashback" model="ir.ui.view">
            <field name="name">sale.quotations.tree.cashback</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_quotation_tree_with_onboarding"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="group_id" optional="hide" />
                    <field name="area_id" optional="hide" />
                    <field name="group_class_id" optional="hide" />
                </xpath>
            </field>
        </record>

        <record id="sale_order_tree_cashback" model="ir.ui.view">
            <field name="name">sale.order.tree.cashback</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="group_id" optional="hide" />
                    <field name="area_id" optional="hide" />
                    <field name="group_class_id" optional="hide" />
                </xpath>
            </field>
        </record>
</odoo>