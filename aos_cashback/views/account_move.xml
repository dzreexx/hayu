<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <!-- Inherit Form View to Modify it -->
        <record id="account_move_form_cashback" model="ir.ui.view">
            <field name="name">account.move.form.cashback</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="customer_group_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}" attrs="{'invisible':[('move_type','in',['in_invoice','in_refund','entry'])]}"/>
                    <field name="area_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}" attrs="{'invisible':[('move_type','in',['in_invoice','in_refund','entry'])]}"/> 
                    <field name="group_class_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}" attrs="{'invisible':[('move_type','in',['in_invoice','in_refund','entry'])]}"/>
                    <field name="saldo_cashback" invisible="1" />
                    <field name="bool_claim" invisible="1"/>
                </xpath>
                <xpath expr="//header" position="inside">
                    <button name="button_claim_cashback" context="{'check_move_validity':False}" attrs="{'invisible':['|','|',('move_type','!=','out_invoice'),('state','!=','draft'),('bool_claim','!=',True)]}" string="Claim Cashback" class="oe_highlight" type="object"  data-hotkey="v"/>
                </xpath>
                <xpath expr="//button[@name='button_cancel']" position="attributes">
                    <attribute name="context">{'check_move_validity':False}</attribute>
                    <attribute name="groups">aos_cashback.group_allow_button_cancel_and_reset_account_move</attribute>
                </xpath>

                <xpath expr="//button[@name='button_cancel'][2]" position="attributes">
                    <attribute name="groups">aos_cashback.group_allow_button_cancel_and_reset_account_move</attribute>
                </xpath>

                <xpath expr="//button[@name='button_draft']" position="attributes">
                    <attribute name="groups">aos_cashback.group_allow_button_cancel_and_reset_account_move</attribute>
                </xpath>


                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='discount']" position="after">
                    <field name="cashback_percent" attrs="{'column_invisible':[('parent.move_type','!=','out_invoice')]}"  force_save="1"/>
                </xpath>
                
                <xpath expr="//field[@name='tax_totals_json']" position="before">
                    <label for="discount_total" class="text-left w-100"  attrs="{'invisible':[('discount_total','=',0)]}"/>
                    <field name="discount_total" nolabel="1" style="width:77%;" attrs="{'invisible':[('discount_total','=',0)]}"/> 

                    <label for="cashback_total" class="text-left w-100" attrs="{'invisible':[('cashback_total','=',0)]}"/>
                    <field name="cashback_total" readonly="1" nolabel="1" style="width:77%;" attrs="{'invisible':[('cashback_total','=',0)]}"/>
                </xpath>
            </field>
        </record>

        <record id="account_move_tree_cashback" model="ir.ui.view">
            <field name="name">account.move.tree.cashback</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_out_invoice_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_date']" position="before">
                    <field name="customer_group_id" optional="hide" />
                    <field name="area_id" optional="hide" />
                </xpath>
            </field>
        </record>
</odoo>