<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_cashback_manual_form" model="ir.ui.view">
            <field name="name">view.cashback.manual.form</field>
            <field name="model">cashback.manual</field>
            <field name="arch" type="xml">
                <form string="Cashback Invoice" >
                    <header>
                        <button name="action_waiting" invisible="1" states="draft" string="Confirm" type="object"/>
                        <button name="action_confirm" states="waiting" string="Approve " type="object"/>
                        <!-- <button name="action_cancel" states="draft" string="Cancel" type="object"/> -->
                        <field name="state" statusbar_visible="draft,waiting,confirm" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" readonly="1" placeholder="......"/>
                            </h1>
                        </div>
                        <group>
                            <group>
<!--                                <field name="name" readonly="1"/>-->
                                <field name="year" invisible="1" readonly="1" force_save="1"/>
                                <field name="group_id" domain="[('period','=',year)]" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create':True}"/>
                                <field name="company_id"/>
                                <field name="ref"/>
                                <field name="memo" readonly="1" force_save="1" attrs="{'invisible':[('memo','=',False)]}"/>
                            </group>
                            <group>
                                <field name="value"/>
                                <field name="default_posting"/>
                                <field name="create_date"/>
                                <field name="user_id" widget="many2one_avatar_user"/>
                            </group>
                        </group>
                        <notebook colspan="4">
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
                    </div>

                </form>
            </field>
        </record>

        <record id="view_cashback_manual_tree" model="ir.ui.view">
            <field name="name">view.cashback.manual.tree</field>
            <field name="model">cashback.manual</field>
            <field name="arch" type="xml">
                <tree string="" default_order='create_date desc'>
                    <field name="name"/>
                    <field name="ref"/>
                    <field name="create_date"/>
                    <field name="user_id" widget="many2one_avatar_user"/>
                    <field name="value"/>

                    <field name="default_posting" string="D/C" decoration-danger="default_posting == 'credit'" decoration-success="default_posting == 'debit'" widget="badge"/>
                    <field name="company_id"/>
                    <field name="state" decoration-info="state == 'draft'" decoration-muted="state == 'waiting'" decoration-danger="state == 'cancel'" decoration-success="state == 'confirm'" widget="badge"/>

                </tree>
            </field>
        </record>

    </data>
</odoo>