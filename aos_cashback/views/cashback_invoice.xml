<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_cashback_invoice_form" model="ir.ui.view">
            <field name="name">view.cashback.invoice.form</field>
            <field name="model">cashback.invoice</field>
            <field name="arch" type="xml">
                <form string="Cashback Invoice" create="0" delete="0" edit="0">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="......"/>
                            </h1>
                        </div>
                        <group>
<!--                            <field name="name"/>-->
                        </group>
                        <field name="invoice_ids">
                            <tree create="false" delete="false" edit='false'>
                                <field name="name"/>
                                <field name="partner_id"/>
                                <field name="invoice_date_due"/>
                                <field name="amount_untaxed_signed" sum="Amount Untaxed "/>
                                <field name="amount_total_signed" sum="Amount Total"/>
                                <field name="state" optional="hide"/>
                            </tree>
                        </field>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_cashback_invoice_tree" model="ir.ui.view">
            <field name="name">view.cashback.invoice.tree</field>
            <field name="model">cashback.invoice</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="name"/>
                    <field name="invoice_ids" widget="many2many_tags"/>
                </tree>
            </field>
        </record>

    </data>
</odoo>