        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree/field[@name='name']" position="after">
                <field name="kode_barang" readonly="1" invisible="1"/>
                <field name="sparepart" readonly="1"/>
                <field name="jenis_motor" readonly="1"  widget="many2many_tags"/>
            </xpath>

            <!-- <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="replace"/>
            <xpath expr="//field[@name='order_line']/tree/field[@name='price_subtotal']" position="after">
                <field name="product_id" attrs="{'readonly': [('state', 'in', ('purchase', 'to approve','done', 'cancel'))]}"
                       context="{'partner_id':parent.partner_id, 'quantity':product_qty,'uom':product_uom, 'company_id': parent.company_id}"/>
            </xpath> -->

        </field>
    </record>

