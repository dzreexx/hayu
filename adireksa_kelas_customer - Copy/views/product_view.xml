<odoo>

     <record id="view_purchase_request_inherit_product_related_fields" model="ir.ui.view">
        <field name="name">Add product_related_fields in purchase request</field>
        <field name="model">purchase.request</field>
        <field name="inherit_id" ref="purchase_request.view_purchase_request_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='line_ids']/tree/field[@name='name']" position="after">
                <field name="kode_barang" readonly="1"/>
                <field name="sparepart" readonly="1"/>
                <field name="jenis_motor" readonly="1"  widget="many2many_tags"/>
            </xpath>
            <!-- <xpath expr="//field[@name='line_ids']/form//field[@name='name']" position="after">
                <field name="kode_barang" readonly="1"/>
                <field name="sparepart" readonly="1"/>
                <field name="jenis_motor" readonly="1"  widget="many2many_tags"/>
            </xpath> -->
        </field>
    </record>

