<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_template_purchase_button_incoming_qty" model="ir.ui.view">
        <field name="name">product.template.purchase.incoming.qty</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="purchase.view_product_template_purchase_buttons_from"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_view_po']" position="after">
                <button class="oe_stat_button" name="action_view_moves" type="object" icon="fa-cubes">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value">
                            <field name="outstanding_qty" widget="statinfo" nolabel="1" class="mr4"/>
                            <field name="uom_name"/>
                        </span>
                        <span class="o_stat_text">Incoming Qty</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>

</odoo>
