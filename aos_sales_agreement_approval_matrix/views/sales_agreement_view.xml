<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sale_agreement_approval_matrix" model="ir.ui.view">
        <field name="name">sale.agreement.approval.matrix</field>
        <field name="model">sale.agreement</field>
        <field name="inherit_id" ref="aos_sales_agreement.sale_agreement_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_confirm']" position="replace">
                <button string="Confirm" name="action_approval" type="object" class="oe_highlight" states="draft"/>
            </xpath>
            <xpath expr="//button[@name='action_done']" position="before">
                <button string="To Approve" name="action_approve" type="object" class="oe_highlight" groups="approval_matrix.group_approval_matrix_manager" attrs="{'invisible':['|',('user_can_approve','=',False),('state','!=','waiting_approval')]}"/>
                <button string="Reject" type="object" name="open_reject_message_wizard" groups="approval_matrix.group_approval_matrix_manager" attrs="{'invisible':[('state','not in',['waiting_approval','approve'])]}" />
            </xpath>
            <xpath expr="//button[@name='action_cancel']" position="attributes">
                <attribute name="attrs">{'invisible':[('state','in',['cancel','done','waiting_approval','rejected'])]}</attribute>
            </xpath>
            <xpath expr="//field[@name='state']" position="attributes">
                <attribute name="states">draft,waiting_approval,running,unlocked,done,cancel</attribute>
            </xpath>
            <xpath expr="//page[last()]" position="after">
                <page id="page_approval" name="page_approval" string="Approvals">
                	<field name="user_can_approve" invisible="1" />
                    <field name="approval_ids" readonly="1"/>
                    <group><field name="approved"/></group>
                    <button string="Fetch Matrix" type="object" name="checking_approval_matrix" class="oe_highlight" />
                </page>
            </xpath>
        </field>
    </record>

</odoo>
