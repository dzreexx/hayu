<odoo>
    <data>

        <record id="view_account_move_cashback_inherit" model="ir.ui.view">
            <field name="name">view.account.move.cashback.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@id='invoice_tab']" position="after">
                    <page name="cashback" string="Cashback" attrs="{'invisible':['|',('move_type','!=','out_invoice'),('cashback_bool','=',False)]}">
                        <group>
                            <group>
                                <field name="cashback_bool" invisible="1"/>
                                <field name="cashback_id" widget="many2many_tags" readonly="1" attrs="{'invisible': [('cashback_bool', '=', False)]}"/>
                            </group>
                            <group>
                                <field name="amount_total_before_cashback" widget='monetary' options="{'currency_field': 'currency_id'}" attrs="{'invisible': [('cashback_bool', '=', False)]}"/>
                                <field name="cashback_amount" widget='monetary' options="{'currency_field': 'currency_id'}" attrs="{'invisible': [('cashback_bool', '=', False)]}"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

    </data>
</odoo>