<odoo>
    <data>

        <record id="customer_cashback_form_view" model="ir.ui.view">
            <field name="name">adireksa.cusotmer.cashback.form</field>
            <field name="model">adireksa.cashback</field>
            <field name="arch" type="xml">
                <form string="Customer Cashback">
                    <header>
                        <button name="action_request_to_approve" states="draft" string="Request for Approvel" type="object" class="oe_highlight"/>
                        <button name="action_approve" states="request_to_approval" string="Approve" type="object"/>
                        <button name="action_reset_to_draft" string="Reset to Draft" type="object" states="approved" class="oe_highlight"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,request_to_approval,approved" readonly="1"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="jenis_omset"/>
                                <field name="jenis_cashback"/>
                            </group>
                            <group>
                                <field name="period_start"/>
                                <field name="period_end"/>
                                <field name="aktifkan_cashback"/>
                            </group>
                        </group>
                        <group string="Cashback">
                            <group>
                                <field name="cashback_formula"/>
                            </group>
                            <group>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="cusotmer_cashback_tree" model="ir.ui.view">
            <field name="name">adireksa.customer.cashback.tree</field>
            <field name="model">adireksa.cashback</field>
            <field name="arch" type="xml">
                <tree string="Customer Cashback">
                    <field name="name"/>
                    <field name="jenis_omset"/>
                    <field name="jenis_cashback"/>
                    <field name="period_start"/>
                    <field name="period_end"/>
                    <field name="aktifkan_cashback"/>
                    <field name="cashback_formula"/>
                </tree>
            </field>
        </record>

        <record id="action_customer_cashback" model="ir.actions.act_window">
            <field name="name">Master Customer Cashback</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">adireksa.cashback</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a Customer Cashback.
                </p>
            </field>
        </record>



        <menuitem id="menu_master_customer_cashback" name="Master Customer Cashback" parent="account.menu_finance_configuration" sequence="2"/>
        <menuitem
            id="sub_menu_master_customers_cashback"
            name="Master Customer Cashback"
            action="action_customer_cashback"
            parent="menu_master_customer_cashback"
            sequence="1"/>

        <menuitem id="menu_cashback_grandparent" name="Cashback 1" parent="" action="" sequence="10"/>
        <menuitem id="menu_cashback_parent" name="Customer" parent="menu_cashback_grandparent" action="" sequence="20"/>
        <menuitem id="menu_master_customer_cashback_01" name="Master Customer Cashback" parent="menu_cashback_parent" action="action_customer_cashback" sequence="30"/>
    </data>
</odoo>