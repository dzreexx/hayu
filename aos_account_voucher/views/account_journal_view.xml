<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_account_journal_voucher_search" model="ir.ui.view">
        <field name="name">account.journal.search</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.view_account_journal_search"/>
        <field name="arch" type="xml">
            <filter name="dashboard" position="after">
                <filter name="voucher" string="Voucher" domain="[('is_voucher', '=', True)]"/>
                <filter name="nonvoucher" string="NonVoucher" domain="[('is_voucher', '=', False)]"/>
            </filter>
        </field>
    </record>

    <record model="ir.ui.view" id="view_account_journal_form_voucher">
        <field name="name">account.journal.voucher</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.view_account_journal_form"/>
        <field name="arch" type="xml">
        	<xpath expr="//page[@name='bank_account']/group" position="inside">
                <group name="journal_voucher" string="Voucher">
                    <field name="is_voucher"/>
                </group>
        	</xpath>
        </field>
    </record>
    

