            <field name="name">BKK</field>
            <field name="code">bkk</field>
        </record>
        <record id="account_voucher_type2" model="account.voucher.type">
            <field name="name">BKM</field>
            <field name="code">bkm</field>
        </record>
        <record id="account_voucher_type3" model="account.voucher.type">
