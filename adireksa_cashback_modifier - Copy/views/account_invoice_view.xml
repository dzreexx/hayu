        <record id="invoice_form_inherit_cashback_mod" model="ir.ui.view">
            <field name="name">account.invoice.cashback</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@class='oe_subtotal_footer oe_right']" position="before">
                    <group>
                        <field name="cashback_deduction_option" invisible="1"/>
                        <field name="cashback_balance"/>
                        <field name="cashback_value_type" attrs="{'readonly': ['|',('state','!=','draft'),('cashback_deduction_option','=', 'sale_order')]}"/>
                        <field name="cashback_fixed_value" attrs="{'invisible':[('cashback_value_type','=','perc')],'readonly': ['|',('state','!=','draft'),('cashback_deduction_option','=', 'sale_order')]}"/>
                        <field name="cashback_per" attrs="{'invisible':[('cashback_value_type','=','fixed')],'readonly': ['|',('state','!=','draft'),('cashback_deduction_option','=', 'sale_order')]}" class="oe_inline"/> <span>%</span>
                        <field name="max_cashback" readonly='1' class="oe_inline"/> <span>%</span>
                    </group>
                </xpath>
                <!-- <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='discount']" position="attributes">
                    <attribute name="groups"/>
                </xpath> -->
            </field>
        </record>
