<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- WIZARD PRINT REPORT CASHBACK-->
    <record id="wizard_cashback_report" model="ir.ui.view">
        <field name="name">Print Cashback Report</field>
        <field name="model">cashback.print</field>
        <field name="arch" type="xml">
            <form string="Print Options">
                <group col="4">
                    <field name="date_from" required="1"/>
                    <field name="date_to" required="1"/>
                </group>
                <group>
                    <field name="previous_balance"/>
                </group>
                <footer>
                    <button name="print_report" string="Print" type="object" class="oe_highlight"/>
                    or 
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <!-- ACTION REPORT WIZARD CASHBACK -->
     <record id="action_wizard_cashback" model="ir.actions.act_window">
            <field name="name">Print Cashback Report</field>
            <field name="res_model">cashback.print</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
    </record>


    <!-- button report cashback -->
    <record id="form_button_report_cashback" model="ir.ui.view">
        <field name="name">form_button_report_cashback</field>
        <field name="model">master.customer.cashback</field> 
        <field name="inherit_id" ref="aos_cashback.view_master_customer_cashback_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button string="Print Report" name="%(adireksa_cashback_report.action_wizard_cashback)d" type="action" class="oe_highlight"/>
            </xpath>
        </field>
    
    </record>

