<odoo>
    <!-- Add stock quantity fields to sale order form -->
    <record id="view_order_form_inherit_zky_stock" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.zky.stock</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Add to the order line form view -->
            <xpath expr="//field[@name='order_line']/form" position="inside">
                <group name="zky_stock_info" string="Stock Information" colspan="2">
                    <field name="on_hand_qty" readonly="1"/>
                    <field name="available_qty" readonly="1"/>
                    <field name="availability_status" widget="statusbar" readonly="1"/>
                </group>
            </xpath>
            
            <!-- Add to the order line tree view with optional attribute -->
            <xpath expr="//field[@name='order_line']/tree//field[@name='product_id']" position="after">
                <field name="on_hand_qty" readonly="1" optional="show"/>
                <field name="available_qty" readonly="1" optional="show"/>
                <field name="availability_status" widget="badge" readonly="1" 
                       decoration-success="availability_status == 'available'"
                       decoration-danger="availability_status == 'unavailable'"
                       optional="show"/>
            </xpath>
        </field>
    </record>
</odoo>