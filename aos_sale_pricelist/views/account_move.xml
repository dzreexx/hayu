<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_move_pricelist_inherit" model="ir.ui.view">
        <field name="name">account_move_pricelist_inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='journal_div']" position="after">
                <field name="pricelist_id" domain="[('group_class_id','=',group_class_id)]" attrs="{'invisible':[('move_type','in',['entry','in_refund','in_invoice'])], 'readonly':[('state','in',['posted'])]}"/> 
                <!-- <field name="pricelist_ids" attrs="{'invisible':[('move_type','in',['in_refund','out_invoice'])]}"/> -->
                <field name="pricelist_ids" invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>