<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_condition_product" model="ir.ui.view">
        <field name="name">res_condition_product</field>
        <field name="model">res.condition.product</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="res_action_type_tree_view" model="ir.ui.view">
        <field name="name">res_action_type_tree_view</field>
        <field name="model">res.action.type</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name" />
                <field name="is_default_return" />
                <field name="is_default_replacement" />
                <field name="is_receipt" string="Add To Stock"/>
                <field name="is_delivery" string="Send Back To Customer"/>
                <field name="is_replacement" />
                <field name="other_action" />
            </tree>
        </field>
    </record>

    <record id="action_window_action_type" model="ir.actions.act_window">
        <field name="name">Action Type</field>
        <field name="res_model">res.action.type</field>
        <field name="view_mode">tree</field>
    </record>

    <record id="action_window_condition_product" model="ir.actions.act_window">
        <field name="name">Condition Product</field>
        <field name="res_model">res.condition.product</field>
        <field name="view_mode">tree</field>
    </record>

    <menuitem
        id="action_type_config_sub_menu"
        name="Action type"
        action="action_window_action_type"
        parent="sale.menu_sale_config"
        sequence="10"/>

    <menuitem
        id="condition_product_config_sub_menu"
        name="Condition Product"
        action="action_window_condition_product"
        parent="sale.menu_sale_config"
        sequence="10"/>
</odoo>