<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="replacement_product_form_view" model="ir.ui.view">
        <field name="name">replacement_product_form_view</field>
        <field name="model">replacement.product.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="replacement_ids">
                        <tree editable="bottom">
                            <field name="product_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}"/>
                            <field name="brand" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}"/> 
                            <field name="qty"/>
                            <field name="quantity_on_hand"/> 
                            <field name="price_unit" force_save="1" readonly="1"/>
                            <field name="price_subtotal" sum="Total"/>
                        </tree>
                    </field>
                </sheet>
                <footer> 
                    <button string="Confirm" name="button_confirm" type="object" class="oe_highlight"/>
                    <button string="Cancel" special="cancel" type="object"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="replacement_product_wizard_action" model="ir.actions.act_window">
        <field name="name">Replacement Product</field>
        <field name="res_model">replacement.product.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
