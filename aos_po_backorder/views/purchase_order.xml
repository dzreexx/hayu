<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="purchase_order_backorder_form" model="ir.ui.view">
        <field name="name">purchase.order.backorder.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button" attrs="{'invisible':[('parent_id','=',False)]}" icon="fa-power-off" name="action_open_po_back_order" type="object" >
                    <field name="parent_id" widget="statinfo" string="Po BackOrder"/>
                </button>
            </xpath>
            <xpath expr="//header/button[@name='button_cancel']" position="before">
                <field name="back_bool" invisible="1"/>
                <button name="create_po_backorder" attrs="{'invisible': ['|',('incoming_picking_count','in',[0,1]),('back_bool','=',True)]}" string="PO Back Order" type="object" class="oe_highlight" data-hotkey="x"/>
			</xpath>
        </field>
    </record>
</odoo>