<odoo>
    <record id="backorder_wizard_form" model="ir.ui.view">
        <field name="name">backorder.wizard.form</field>
        <field name="model">backorder.wizard</field>
        <field name="arch" type="xml">
            <form string="PO BackOrder">
                <field name="name" readonly="1"/>
                <field name="po_id" invisible="1"/>
                <field name="backorder_line_ids">
                    <tree editable="bottom" create='0' delete='0'>
                        <field name="product_id"/>
                        <field name="name"/>
                        <field name="qty"/>
                        <field name="currency_id" optional="hide"/>
                        <field name="price"/>
                        <field name="disc"/>
                        <field name="price_after" force_save="1"/>
                    </tree>
                </field>
                <footer>
                    <button name="btn_confirm" string="Create PO Backorder" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>